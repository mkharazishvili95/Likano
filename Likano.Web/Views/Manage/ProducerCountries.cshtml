@model Likano.Web.Models.Manage.ProducerCountriesManageViewModel
@{
    ViewData["Title"] = "მწარმოებელი ქვეყნები - ადმინი";
    Layout = "_ManageLayout";

    var pageNumber = Model.Filter.PageNumber <= 0 ? 1 : Model.Filter.PageNumber;
    var pageSize = Model.Filter.PageSize <= 0 ? 10 : Model.Filter.PageSize;
    var totalCount = Model.Response?.TotalCount ?? 0;
    var totalPages = totalCount == 0 ? 1 : (int)Math.Ceiling(totalCount / (double)pageSize);

    RouteValueDictionary BuildRoute(int targetPage) => new RouteValueDictionary(new
    {
        Id = Model.Filter.Id,
        Name = Model.Filter.Name,
        PageNumber = targetPage,
        PageSize = pageSize
    });
}

<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">მწარმოებელი ქვეყნების მართვა</h2>
        <div class="d-flex align-items-center">
            @if (TempData["SuccessMessage"] is string sm)
            {
                <div class="alert alert-success alert-dismissible fade show shadow-sm rounded-4 mb-0" role="alert">
                    <i class="fas fa-check-circle me-2"></i>@sm
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            else if (TempData["ErrorMessage"] is string em)
            {
                <div class="alert alert-danger alert-dismissible fade show shadow-sm rounded-4 mb-0" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@em
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden mb-4">
        <div class="card-header bg-gradient-primary text-white py-3">
            <h5 class="mb-0"><i class="fas fa-filter me-2"></i>ფილტრები</h5>
        </div>
        <div class="card-body p-4">
            <form asp-action="ProducerCountries" asp-controller="Manage" method="get" class="row g-3">
                <div class="col-6 col-md-2">
                    <label class="form-label small fw-medium">ID</label>
                    <input type="number" name="Id" value="@Model.Filter.Id"
                           class="form-control form-control-sm no-spinner" placeholder="ID" />
                </div>

                <div class="col-12 col-md-6">
                    <label class="form-label small fw-medium">დასახელება</label>
                    <input type="text" name="Name" value="@Model.Filter.Name"
                           class="form-control form-control-sm" placeholder="დასახელება" />
                </div>

                <div class="col-12 mt-2"></div>

                <div class="col-6 col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary shadow-sm w-100">
                        <i class="fas fa-search me-2"></i>ძიება
                    </button>
                </div>
                <div class="col-6 col-md-2 d-flex align-items-end">
                    <a href="@Url.Action("ProducerCountries", "Manage")" class="btn btn-outline-secondary shadow-sm w-100">
                        <i class="fas fa-times me-2"></i>გასუფთავება
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">ID</th>
                            <th>დასახელება</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Response?.Items?.Any() == true)
                        {
                            foreach (var c in Model.Response.Items)
                            {
                                <tr class="align-middle">
                                    <td class="ps-4 fw-medium">@c.Id</td>
                                    <td class="fw-bold text-dark">@c.Name</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center py-5 text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3 opacity-50"></i>
                                    <p class="mb-0">მონაცემები არ მოიძებნა</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (totalCount > 0)
            {
                <div class="card-footer bg-light border-0 py-4">
                    <div class="row align-items-center">
                        <div class="col-md-6 text-muted small">
                            ნაჩვენებია @(pageNumber* pageSize - pageSize + 1)–@(Math.Min(pageNumber * pageSize, totalCount))
                            სულ @totalCount-დან • გვერდი @pageNumber / @totalPages
                        </div>
                        <div class="col-md-6">
                            <nav aria-label="Page navigation">
                                <ul class="pagination pagination-primary justify-content-end mb-0">
                                    <li class="page-item @(pageNumber <= 1 ? "disabled" : "")">
                                        <a class="page-link" href="@(pageNumber <= 1 ? "#" : Url.Action("ProducerCountries", "Manage", BuildRoute(pageNumber - 1)))">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>
                                    @{
                                        var start = Math.Max(1, pageNumber - 2);
                                        var end = Math.Min(totalPages, start + 4);
                                        start = Math.Max(1, end - 4);
                                    }
                                    @for (int i = start; i <= end; i++)
                                    {
                                        <li class="page-item @(i == pageNumber ? "active" : "")">
                                            <a class="page-link" href="@Url.Action("ProducerCountries", "Manage", BuildRoute(i))">@i</a>
                                        </li>
                                    }
                                    <li class="page-item @(pageNumber >= totalPages ? "disabled" : "")">
                                        <a class="page-link" href="@(pageNumber >= totalPages ? "#" : Url.Action("ProducerCountries", "Manage", BuildRoute(pageNumber + 1)))">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-controller="Manage" asp-action="Main" class="btn btn-outline-secondary back-btn shadow-sm">
        <i class="fas fa-arrow-left me-2"></i>უკან დაბრუნება
    </a>
</div>

<style>
    body {
        font-family: 'Roboto', sans-serif;
    }

    .no-spinner::-webkit-inner-spin-button,
    .no-spinner::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .no-spinner {
        -moz-appearance: textfield;
    }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .card {
        transition: transform 0.2s ease;
    }

    .card:hover {
        transform: translateY(-2px);
    }

    .table th {
        border-top: none;
        font-weight: 500;
        color: #495057;
    }

    .badge {
        font-size: 0.8rem;
    }

    .back-btn {
        border-color: #667eea;
        color: #667eea;
        border-width: 2px;
        border-radius: 999px;
        padding: 0.5rem 1rem;
        transition: all 0.2s ease;
    }

    .back-btn:hover {
        background-color: #667eea;
        color: #fff;
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.35);
    }

    .pagination-primary .page-item.active .page-link {
        background: #667eea;
        border-color: #667eea;
    }

    @@media (max-width: 768px) {
        .table thead {
            display: none;
        }

        .table tr {
            display: block;
            margin-bottom: 1rem;
            border: 1px solid #dee2e6;
            border-radius: 0.5rem;
            padding: 1rem;
            background: #fff;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

        .table td {
            display: block;
            text-align: right;
            padding: 0.5rem 0;
            border: none;
        }

        .table td:before {
            content: attr(data-label);
            float: left;
            font-weight: bold;
            color: #6c757d;
        }

        .table td:last-child {
            text-align: center;
        }
    }
</style>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
}