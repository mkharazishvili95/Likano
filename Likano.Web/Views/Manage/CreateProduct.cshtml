@using Likano.Application.DTOs
@{
    ViewData["Title"] = "პროდუქტის დამატება";
    Layout = "_ManageLayout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">პროდუქტის დამატება</h2>
        <a asp-controller="Manage" asp-action="Products" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> უკან დაბრუნება
        </a>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 text-primary"><i class="fas fa-plus me-2"></i> ახალი პროდუქტი</h5>
        </div>

        <div class="card-body p-4">
            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger mb-4" })
            }

            <form asp-action="CreateProduct" asp-controller="Manage" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="row g-4">
                    <div class="col-12 col-lg-8">
                        <div class="mb-3">
                            <label for="title" class="form-label small fw-medium">სათაური <span class="text-danger">*</span></label>
                            <input name="title" id="title" class="form-control" required />
                            @Html.ValidationMessage("title", new { @class = "text-danger small d-block mt-1" })
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label small fw-medium">აღწერა</label>
                            <textarea name="description" id="description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label small fw-medium">ფასი</label>
                            <input name="price" id="price" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="categoryId" class="form-label small fw-medium">კატეგორია <span class="text-danger">*</span></label>
                            <select name="categoryId" id="categoryId" class="form-control" required>
                                <option value="">აირჩიეთ</option>
                                @foreach (var c in ViewBag.Categories as List<CategoryDtoForManage>)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                            @Html.ValidationMessage("categoryId", new { @class = "text-danger small d-block mt-1" })
                        </div>
                        <div class="mb-3">
                            <label for="brandId" class="form-label small fw-medium">ბრენდი</label>
                            <select name="brandId" id="brandId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @foreach (var b in ViewBag.Brands as List<BrandDtoForManage>)
                                {
                                    <option value="@b.Id">@b.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="producerCountryId" class="form-label small fw-medium">მწარმოებელი ქვეყანა</label>
                            <select name="producerCountryId" id="producerCountryId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @foreach (var c in ViewBag.Countries as List<ProducerCountryDtoForManage>)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="material" class="form-label small fw-medium">მასალა</label>
                            <input name="material" id="material" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="length" class="form-label small fw-medium">სიგრძე</label>
                            <input name="length" id="length" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="width" class="form-label small fw-medium">სიგანე</label>
                            <input name="width" id="width" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="height" class="form-label small fw-medium">სიმაღლე</label>
                            <input name="height" id="height" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label small fw-medium">ფერი</label>
                            <input name="color" id="color" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <label class="form-label small fw-medium mb-0">ფოტოები</label>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="clearPhotosBtn">
                                <i class="fas fa-times-circle"></i> გასუფთავება
                            </button>
                        </div>
                        <input id="photosInput" name="photos" type="file" class="form-control" accept="image/*" multiple />
                        <div class="form-text text-muted mt-2 small">
                            PNG / JPG / WEBP • შეგიძლიათ ატვირთოთ რამდენიმე ფოტო
                        </div>
                        <div class="mt-3">
                            <div class="border rounded-3 p-3 bg-light">
                                <div id="photosPreviewWrapper" class="text-center">
                                    <img id="photoPreview"
                                         src=""
                                         alt="ფოტოს პრევიუ"
                                         class="rounded shadow-sm"
                                         style="display:none; max-height:180px; object-fit:contain;" />
                                    <div id="photoPlaceholder" class="text-muted py-4">
                                        <i class="fas fa-image fa-2x opacity-50 d-block mb-2"></i>
                                        <span class="small">ფოტოს პრევიუ გამოჩნდება აქ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-controller="Manage" asp-action="Products" class="btn btn-outline-secondary">
                        გაუქმება
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i> დამატება
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const photosInput = document.getElementById('photosInput');
        const photoPreview = document.getElementById('photoPreview');
        const photoPlaceholder = document.getElementById('photoPlaceholder');
        const clearPhotosBtn = document.getElementById('clearPhotosBtn');

        function resetPreview() {
            photosInput.value = '';
            photoPreview.src = '';
            photoPreview.style.display = 'none';
            photoPlaceholder.style.display = 'block';
        }

        photosInput?.addEventListener('change', function () {
            const file = this.files?.[0];
            if (!file) return resetPreview();

            const reader = new FileReader();
            reader.onload = (e) => {
                photoPreview.src = e.target.result;
                photoPreview.style.display = 'block';
                photoPlaceholder.style.display = 'none';
            };
            reader.readAsDataURL(file);
        });

        clearPhotosBtn?.addEventListener('click', resetPreview);
    </script>
}