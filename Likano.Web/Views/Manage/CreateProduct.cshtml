@using Likano.Application.DTOs
@{
    ViewData["Title"] = "პროდუქტის დამატება";
    Layout = "_ManageLayout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">პროდუქტის დამატება</h2>
        <a asp-controller="Manage" asp-action="Products" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> უკან დაბრუნება
        </a>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 text-primary"><i class="fas fa-plus me-2"></i> ახალი პროდუქტი</h5>
        </div>

        <div class="card-body p-4">
            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger mb-4" })
            }

            <form asp-action="CreateProduct" asp-controller="Manage" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" name="mainPhotoIndex" id="mainPhotoIndex" value="0" />
                <div class="row g-4">
                    <div class="col-12 col-lg-8">
                        <div class="mb-3">
                            <label for="title" class="form-label small fw-medium">სათაური <span class="text-danger">*</span></label>
                            <input name="title" id="title" class="form-control" required />
                            @Html.ValidationMessage("title", new { @class = "text-danger small d-block mt-1" })
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label small fw-medium">აღწერა</label>
                            <textarea name="description" id="description" class="form-control" rows="4"></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label small fw-medium">ფასი</label>
                            <input name="price" id="price" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="categoryId" class="form-label small fw-medium">კატეგორია <span class="text-danger">*</span></label>
                            <select name="categoryId" id="categoryId" class="form-control" required>
                                <option value="">აირჩიეთ</option>
                                @foreach (var c in ViewBag.Categories as List<CategoryDtoForManage>)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                            @Html.ValidationMessage("categoryId", new { @class = "text-danger small d-block mt-1" })
                        </div>
                        <div class="mb-3">
                            <label for="brandId" class="form-label small fw-medium">ბრენდი</label>
                            <select name="brandId" id="brandId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @foreach (var b in ViewBag.Brands as List<BrandDtoForManage>)
                                {
                                    <option value="@b.Id">@b.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="producerCountryId" class="form-label small fw-medium">მწარმოებელი ქვეყანა</label>
                            <select name="producerCountryId" id="producerCountryId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @foreach (var c in ViewBag.Countries as List<ProducerCountryDtoForManage>)
                                {
                                    <option value="@c.Id">@c.Name</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="material" class="form-label small fw-medium">მასალა</label>
                            <input name="material" id="material" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="length" class="form-label small fw-medium">სიგრძე</label>
                            <input name="length" id="length" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="width" class="form-label small fw-medium">სიგანე</label>
                            <input name="width" id="width" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="height" class="form-label small fw-medium">სიმაღლე</label>
                            <input name="height" id="height" class="form-control" type="number" step="0.01" />
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label small fw-medium">ფერი</label>
                            <input name="color" id="color" class="form-control" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <label class="form-label small fw-medium mb-0">ფოტოები (მაქს. 10)</label>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="clearPhotosBtn">
                                <i class="fas fa-times-circle"></i> გასუფთავება
                            </button>
                        </div>
                        <input id="photosInput" name="photos" type="file" class="form-control" accept="image/*" multiple />
                        <div class="form-text text-muted mt-2 small">
                            PNG / JPG / WEBP • შეგიძლიათ ატვირთოთ მაქსიმუმ 10 ფოტო<br />
                            <strong>დააჭირეთ ფოტოს მთავარი სურათის ასარჩევად</strong>
                        </div>
                        <div id="photosLimitMsg" class="text-danger small mt-2" style="display:none;">
                            მაქსიმუმ 10 ფოტო შეგიძლიათ აირჩიოთ!
                        </div>
                        <div class="mt-3">
                            <div class="border rounded-3 p-3 bg-light">
                                <div id="photosPreviewWrapper" class="d-flex flex-wrap gap-2 justify-content-center">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-controller="Manage" asp-action="Products" class="btn btn-outline-secondary">
                        გაუქმება
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i> დამატება
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .photo-preview-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: center;
        }
        .photo-preview-item {
            position: relative;
            width: 130px;
            height: 130px;
            border-radius: 12px;
            overflow: hidden;
            background: #f8f9fa;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            display: flex;
            align-items: center;
            justify-content: center;
            transition: box-shadow 0.2s, border 0.2s;
            cursor: pointer;
            border: 3px solid transparent;
        }
        .photo-preview-item:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.13);
        }
        .photo-preview-item.main-photo {
            border: 3px solid #28a745;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.25);
        }
        .photo-preview-img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 10px;
            transition: filter 0.2s;
        }
        .photo-remove-btn {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 28px;
            height: 28px;
            border: none;
            border-radius: 50%;
            background: rgba(255,255,255,0.7);
            color: #dc3545;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
            cursor: pointer;
            opacity: 0.85;
            transition: background 0.2s, color 0.2s;
            z-index: 2;
        }
        .photo-remove-btn:hover {
            background: #dc3545;
            color: #fff;
            opacity: 1;
        }
        .main-badge {
            position: absolute;
            bottom: 8px;
            left: 50%;
            transform: translateX(-50%);
            background: #28a745;
            color: #fff;
            font-size: 10px;
            padding: 2px 8px;
            border-radius: 10px;
            font-weight: 600;
            z-index: 2;
        }
    </style>
    <script>
        const photosInput = document.getElementById('photosInput');
        const photosPreviewWrapper = document.getElementById('photosPreviewWrapper');
        const clearPhotosBtn = document.getElementById('clearPhotosBtn');
        const photosLimitMsg = document.getElementById('photosLimitMsg');
        const mainPhotoIndexInput = document.getElementById('mainPhotoIndex');
        const MAX_PHOTOS = 10;

        let selectedFiles = [];
        let mainIndex = 0;

        function updatePreview() {
            photosPreviewWrapper.innerHTML = '';
            photosPreviewWrapper.className = 'photo-preview-grid';
            selectedFiles.forEach((file, idx) => {
                const wrapper = document.createElement('div');
                wrapper.className = 'photo-preview-item' + (idx === mainIndex ? ' main-photo' : '');
                wrapper.title = 'დააჭირეთ მთავარი ფოტოს ასარჩევად';

                const img = document.createElement('img');
                img.src = URL.createObjectURL(file);
                img.className = 'photo-preview-img';
                img.title = file.name;

                const removeBtn = document.createElement('button');
                removeBtn.type = 'button';
                removeBtn.className = 'photo-remove-btn';
                removeBtn.innerHTML = '<svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 16 16"><line x1="4" y1="4" x2="12" y2="12"/><line x1="12" y1="4" x2="4" y2="12"/></svg>';
                removeBtn.title = "ფოტოს წაშლა";
                removeBtn.onclick = function (e) {
                    e.stopPropagation();
                    selectedFiles.splice(idx, 1);
                    if (mainIndex >= selectedFiles.length) mainIndex = Math.max(0, selectedFiles.length - 1);
                    if (mainIndex === idx && selectedFiles.length > 0) mainIndex = 0;
                    mainPhotoIndexInput.value = mainIndex;
                    updatePreview();
                };

                wrapper.appendChild(img);
                wrapper.appendChild(removeBtn);

                if (idx === mainIndex) {
                    const badge = document.createElement('span');
                    badge.className = 'main-badge';
                    badge.textContent = 'მთავარი';
                    wrapper.appendChild(badge);
                }

                wrapper.onclick = function () {
                    mainIndex = idx;
                    mainPhotoIndexInput.value = mainIndex;
                    updatePreview();
                };

                photosPreviewWrapper.appendChild(wrapper);
            });
        }

        photosInput?.addEventListener('change', function () {
            photosLimitMsg.style.display = 'none';
            const files = Array.from(this.files || []);
            if ((selectedFiles.length + files.length) > MAX_PHOTOS) {
                photosLimitMsg.style.display = 'block';
                photosInput.value = '';
                return;
            }
            files.forEach(file => {
                if (!selectedFiles.some(f => f.name === file.name && f.size === file.size && f.lastModified === file.lastModified)) {
                    selectedFiles.push(file);
                }
            });
            updatePreview();
            photosInput.value = '';
        });

        clearPhotosBtn?.addEventListener('click', function () {
            selectedFiles = [];
            mainIndex = 0;
            mainPhotoIndexInput.value = 0;
            updatePreview();
            photosLimitMsg.style.display = 'none';
        });

        document.querySelector('form').addEventListener('submit', function (e) {
            if (selectedFiles.length > MAX_PHOTOS) {
                photosLimitMsg.style.display = 'block';
                e.preventDefault();
                return false;
            }
            const dt = new DataTransfer();
            selectedFiles.forEach(f => dt.items.add(f));
            photosInput.files = dt.files;
        });
    </script>
}