@{
    ViewData["Title"] = "ბრენდის შექმნა";
    Layout = "_ManageLayout";
}
<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">ბრენდის შექმნა</h2>
        <a asp-controller="Manage" asp-action="Brands" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> უკან დაბრუნება
        </a>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 text-primary"><i class="fas fa-plus-circle me-2"></i> ახალი ბრენდი</h5>
        </div>
        <div class="card-body p-4">
            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger mb-4" })
            }

            <form asp-controller="Manage" asp-action="CreateBrand" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="row g-4">
                    <div class="col-12 col-lg-8">
                        <div class="mb-3">
                            <label class="form-label small fw-medium">დასახელება <span class="text-danger">*</span></label>
                            <input name="name" class="form-control" required placeholder="მაგ: Nike" />
                            @Html.ValidationMessage("name", new { @class = "text-danger small d-block mt-1" })
                        </div>

                        <div class="mb-3">
                            <label class="form-label small fw-medium">აღწერა (სურვილისამებრ)</label>
                            <textarea name="description" class="form-control" rows="4" placeholder="მოკლე აღწერა..."></textarea>
                        </div>
                    </div>

                    <div class="col-12 col-lg-4">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <label class="form-label small fw-medium mb-0">ლოგო</label>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="clearLogoBtn">
                                <i class="fas fa-times-circle"></i> გასუფთავება
                            </button>
                        </div>

                        <input id="logoInput" name="logo" type="file" class="form-control" accept="image/*" />
                        <div class="form-text text-muted mt-2 small">
                            PNG / JPG / WEBP • რეკომენდირებული 256×256 ან 512×512
                        </div>

                        <div class="mt-3">
                            <div class="border rounded-3 p-3 bg-light">
                                <div id="logoPreviewWrapper" class="text-center">
                                    <img id="logoPreview"
                                         src=""
                                         alt="ლოგოს პრევიუ"
                                         class="rounded shadow-sm"
                                         style="display:none; max-height:180px; object-fit:contain;" />
                                    <div id="logoPlaceholder" class="text-muted py-4">
                                        <i class="fas fa-image fa-2x opacity-50 d-block mb-2"></i>
                                        <span class="small">ლოგოს პრევიუ გამოჩნდება აქ</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-controller="Manage" asp-action="Brands" class="btn btn-outline-secondary">გაუქმება</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-plus-circle me-2"></i> შექმნა
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const logoInput = document.getElementById('logoInput');
    const logoPreview = document.getElementById('logoPreview');
    const logoPlaceholder = document.getElementById('logoPlaceholder');
    const clearLogoBtn = document.getElementById('clearLogoBtn');

    function resetPreview() {
        logoInput.value = '';
        logoPreview.src = '';
        logoPreview.style.display = 'none';
        logoPlaceholder.style.display = 'block';
    }

    logoInput?.addEventListener('change', function () {
        const file = this.files?.[0];
        if (!file) return resetPreview();

        const reader = new FileReader();
        reader.onload = (e) => {
            logoPreview.src = e.target.result;
            logoPreview.style.display = 'block';
            logoPlaceholder.style.display = 'none';
        };
        reader.readAsDataURL(file);
    });

    clearLogoBtn?.addEventListener('click', function () {
        resetPreview();
    });
</script>
}