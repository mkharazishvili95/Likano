@{
    ViewData["Title"] = "სამართავი პანელი";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-end mb-4 gap-2">
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        <i class="fas fa-home"></i> მთავარზე გადასვლა
    </a>    
    <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-sign-out-alt"></i> გამოსვლა
        </button>
    </form> 
</div>

<div class="text-center mb-5">
    <p class="text-muted fs-5 mb-0">მართეთ პროდუქცია, კატეგორიები, ბრენდები და მწარმოებელი ქვეყნები</p>
</div>

<div class="row g-4 justify-content-center align-items-stretch">
    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <a asp-controller="Manage" asp-action="Categories" class="dashboard-link d-block h-100">
            <div class="dashboard-card">
                <div class="card-icon bg-purple">
                    <i class="fas fa-th-large fa-2x"></i>
                </div>
                <div class="card-content">
                    <h4>კატეგორიები</h4>
                    <p class="mb-0">ნახვა • დამატება • რედაქტირება • სტატუსის ცვლილება</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <a asp-controller="Manage" asp-action="Brands" class="dashboard-link d-block h-100">
            <div class="dashboard-card">
                <div class="card-icon bg-orange">
                    <i class="fas fa-copyright fa-2x"></i>
                </div>
                <div class="card-content">
                    <h4>ბრენდები</h4>
                    <p class="mb-0">ნახვა • დამატება • რედაქტირება • სტატუსის ცვლილება</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <a asp-controller="Manage" asp-action="Products" class="dashboard-link d-block h-100">
            <div class="dashboard-card">
                <div class="card-icon bg-blue">
                    <i class="fas fa-boxes-stacked fa-2x"></i>
                </div>
                <div class="card-content">
                    <h4>პროდუქცია</h4>
                    <p class="mb-0">ნახვა • დამატება • რედაქტირება • სტატუსის ცვლილება</p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
        </a>
    </div>

    <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <a href="@Url.Action("ProducerCountries", "Manage")" class="dashboard-link d-block h-100">
            <div class="dashboard-card">
                <div class="card-icon bg-green">
                    <i class="fas fa-globe fa-2x"></i>
                </div>
                <div class="card-content">
                    <h4>მწარმოებელი ქვეყნები</h4>
                    <p class="mb-0">ნახვა • ფილტრი • </p>
                </div>
                <div class="card-arrow">
                    <i class="fas fa-arrow-right"></i>
                </div>
            </div>
        </a>
    </div>
</div>

<style>
    .dashboard-link {
        text-decoration: none;
        display: block;
        transition: transform 0.3s ease;
    }

    .dashboard-card {
        display: flex;
        align-items: center;
        gap: 24px;
        padding: 32px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border-radius: 24px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
        border: 1px solid rgba(255, 255, 255, 0.6);
        transition: all 0.4s ease;
        height: 100%;
    }

        .dashboard-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 25px 50px rgba(102, 126, 234, 0.2);
        }

    .card-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        flex-shrink: 0;
        box-shadow: 0 10px 25px rgba(0,0,0,0.2);
    }

    .bg-purple {
        background: linear-gradient(135deg, #667eea, #764ba2);
    }

    .bg-orange {
        background: linear-gradient(135deg, #f093fb, #f5576c);
    }

    .bg-blue {
        background: linear-gradient(135deg, #43cea2, #185a9d);
    }

    .bg-green {
        background: linear-gradient(135deg, #00c6ff, #0072ff);
    }

    .card-content h4 {
        margin: 0 0 8px;
        font-weight: 600;
        font-size: 1.5rem;
        color: #2d3748;
    }

    .card-content p {
        color: #718096;
        font-size: 1rem;
    }

    .card-arrow {
        margin-left: auto;
        font-size: 1.8rem;
        color: #667eea;
        opacity: 0.7;
        transition: all 0.3s ease;
    }

    .dashboard-card:hover .card-arrow {
        transform: translateX(8px);
        opacity: 1;
    }

    @@media (max-width: 992px) {
        .dashboard-card

    {
        padding: 28px;
    }

    .card-icon {
        width: 70px;
        height: 70px;
    }

    }

    @@media (max-width: 576px) {
        .dashboard-card

    {
        flex-direction: column;
        text-align: center;
        gap: 20px;
        padding: 30px 20px;
    }

    .card-arrow {
        margin: 10px auto 0;
        transform: rotate(90deg);
    }

    .dashboard-card:hover .card-arrow {
        transform: rotate(90deg) translateX(8px);
    }

    .card-content h4 {
        font-size: 1.4rem;
    }

    }

    @@media (min-width: 576px) {
        .dashboard-card { min-height: 180px; }
    }
</style>

@section Scripts {
}