@model Likano.Web.Models.Manage.EditProductViewModel
@using Likano.Application.DTOs
@{
    ViewData["Title"] = "პროდუქტის რედაქტირება";
    Layout = "_ManageLayout";

    var product = Model.Product;
    var categories = Model.Categories;
    var brands = Model.Brands;
    var countries = Model.Countries;
    var existingImages = Model.ExistingImages;
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="h3 mb-0 text-primary fw-bold">პროდუქტის რედაქტირება</h2>
        <a asp-controller="Manage" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-secondary shadow-sm">
            <i class="fas fa-arrow-left me-2"></i> უკან დაბრუნება
        </a>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0 text-primary"><i class="fas fa-edit me-2"></i> რედაქტირება: @product.Title</h5>
        </div>

        <div class="card-body p-4">
            @if (!ViewData.ModelState.IsValid)
            {
                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger mb-4" })
            }

            <form asp-action="EditProduct" asp-controller="Manage" method="post" enctype="multipart/form-data" id="editProductForm">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@product.Id" />
                <input type="hidden" name="mainPhotoIndex" id="mainPhotoIndex" value="-1" />
                <input type="hidden" name="existingMainImageId" id="existingMainImageId" value="" />
                <input type="hidden" name="deletedImageIds" id="deletedImageIds" value="" />

                <div class="row g-4">
                    <div class="col-12 col-lg-8">
                        <div class="mb-3">
                            <label for="title" class="form-label small fw-medium">სათაური <span class="text-danger">*</span></label>
                            <input name="title" id="title" class="form-control" required value="@product.Title" />
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label small fw-medium">აღწერა</label>
                            <textarea name="description" id="description" class="form-control" rows="4">@product.Description</textarea>
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label small fw-medium">ფასი</label>
                            <input name="price" id="price" class="form-control" type="number" step="0.01" value="@product.Price" />
                        </div>
                        <div class="mb-3">
                            <label for="categoryId" class="form-label small fw-medium">კატეგორია <span class="text-danger">*</span></label>
                            <select name="categoryId" id="categoryId" class="form-control" required>
                                <option value="">აირჩიეთ</option>
                                @{
                                    foreach (var c in categories)
                                    {
                                        if (c.Id == product.CategoryId)
                                        {
                                            <option value="@c.Id" selected>@c.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@c.Id">@c.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="brandId" class="form-label small fw-medium">ბრენდი</label>
                            <select name="brandId" id="brandId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @{
                                    foreach (var b in brands)
                                    {
                                        if (b.Id == product.BrandId)
                                        {
                                            <option value="@b.Id" selected>@b.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@b.Id">@b.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="producerCountryId" class="form-label small fw-medium">მწარმოებელი ქვეყანა</label>
                            <select name="producerCountryId" id="producerCountryId" class="form-control">
                                <option value="">აირჩიეთ</option>
                                @{
                                    foreach (var c in countries)
                                    {
                                        if (c.Id == product.ProducerCountryId)
                                        {
                                            <option value="@c.Id" selected>@c.Name</option>
                                        }
                                        else
                                        {
                                            <option value="@c.Id">@c.Name</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="material" class="form-label small fw-medium">მასალა</label>
                            <input name="material" id="material" class="form-control" value="@product.Material" />
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="length" class="form-label small fw-medium">სიგრძე</label>
                                <input name="length" id="length" class="form-control" type="number" step="0.01" value="@product.Length" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="width" class="form-label small fw-medium">სიგანე</label>
                                <input name="width" id="width" class="form-control" type="number" step="0.01" value="@product.Width" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label for="height" class="form-label small fw-medium">სიმაღლე</label>
                                <input name="height" id="height" class="form-control" type="number" step="0.01" value="@product.Height" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="color" class="form-label small fw-medium">ფერი</label>
                            <input name="color" id="color" class="form-control" value="@product.Color" />
                        </div>
                    </div>

                    <div class="col-12 col-lg-4">
                        <h6 class="fw-bold mb-3">არსებული ფოტოები</h6>
                        <div id="existingPhotosWrapper" class="photo-preview-grid mb-4">
                            @foreach (var img in existingImages)
                            {
                                <div class="photo-preview-item @(img.IsMain ? "main-photo" : "")" data-id="@img.Id">
                                    <img src="@img.FileUrl" class="photo-preview-img" />
                                    <button type="button" class="photo-remove-btn existing-remove" data-id="@img.Id" title="ფოტოს წაშლა">
                                        <svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 16 16">
                                            <line x1="4" y1="4" x2="12" y2="12"></line>
                                            <line x1="12" y1="4" x2="4" y2="12"></line>
                                        </svg>
                                    </button>
                                    @if (img.IsMain)
                                    {
                                        <span class="main-badge">მთავარი</span>
                                    }
                                </div>
                            }
                        </div>

                        <hr />

                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <label class="form-label small fw-medium mb-0">ახალი ფოტოები (მაქს. 10)</label>
                            <button type="button" class="btn btn-sm btn-outline-danger" id="clearPhotosBtn">
                                <i class="fas fa-times-circle"></i> გასუფთავება
                            </button>
                        </div>
                        <input id="photosInput" name="photos" type="file" class="form-control" accept="image/*" multiple />
                        <div class="form-text text-muted mt-2 small">
                            PNG / JPG / WEBP • <strong>დააჭირეთ ფოტოს მთავარი სურათის ასარჩევად</strong>
                        </div>
                        <div id="photosLimitMsg" class="text-danger small mt-2" style="display:none;">
                            მაქსიმუმ 10 ფოტო შეგიძლიათ აირჩიოთ!
                        </div>
                        <div class="mt-3">
                            <div class="border rounded-3 p-3 bg-light">
                                <div id="photosPreviewWrapper" class="photo-preview-grid"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-controller="Manage" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-secondary">
                        გაუქმება
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> შენახვა
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deletePhotoModal" tabindex="-1" aria-labelledby="deletePhotoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePhotoModalLabel">ფოტოს წაშლა</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>ნამდვილად გსურთ ფოტოს წაშლა?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cancelDeletePhoto">არა</button>
                <button type="button" class="btn btn-danger" id="confirmDeletePhoto">კი, წაშლა</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .photo-preview-grid {
            display: flex;
            flex-wrap: wrap;
            gap: 12px;
            justify-content: flex-start;
        }
        .photo-preview-item {
            position: relative;
            width: 100px;
            height: 100px;
            border-radius: 12px;
            overflow: hidden;
            background: #f8f9fa;
            box-shadow: 0 2px 8px rgba(0,0,0,0.07);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.2s;
        }
        .photo-preview-item:hover {
            box-shadow: 0 4px 16px rgba(0,0,0,0.13);
        }
        .photo-preview-item.main-photo {
            border: 3px solid #28a745;
            box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.25);
        }
        .photo-preview-item.deleted {
            opacity: 0.3;
            pointer-events: none;
        }
        .photo-preview-img {
            max-width: 100%;
            max-height: 100%;
            object-fit: cover;
            border-radius: 10px;
        }
        .photo-remove-btn {
            position: absolute;
            top: 4px;
            right: 4px;
            width: 24px;
            height: 24px;
            border: none;
            border-radius: 50%;
            background: rgba(255,255,255,0.9);
            color: #dc3545;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            z-index: 2;
        }
        .photo-remove-btn:hover {
            background: #dc3545;
            color: #fff;
        }
        .main-badge {
            position: absolute;
            bottom: 4px;
            left: 50%;
            transform: translateX(-50%);
            background: #28a745;
            color: #fff;
            font-size: 9px;
            padding: 2px 6px;
            border-radius: 8px;
            font-weight: 600;
            z-index: 2;
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const photosInput = document.getElementById('photosInput');
            const photosPreviewWrapper = document.getElementById('photosPreviewWrapper');
            const clearPhotosBtn = document.getElementById('clearPhotosBtn');
            const photosLimitMsg = document.getElementById('photosLimitMsg');
            const mainPhotoIndexInput = document.getElementById('mainPhotoIndex');
            const existingMainImageIdInput = document.getElementById('existingMainImageId');
            const deletedImageIdsInput = document.getElementById('deletedImageIds');
            const deleteModalEl = document.getElementById('deletePhotoModal');
            const MAX_PHOTOS = 10;

            let selectedFiles = [];
            let mainIndex = -1;
            let deletedIds = [];
            let photoToDelete = null;
            let deleteModal = null;

            if (deleteModalEl) {
                deleteModal = new bootstrap.Modal(deleteModalEl);
            }

            document.querySelectorAll('#existingPhotosWrapper .photo-preview-item').forEach(item => {
                item.addEventListener('click', function (e) {
                    if (e.target.closest('.photo-remove-btn')) return;

                    document.querySelectorAll('#existingPhotosWrapper .photo-preview-item').forEach(i => {
                        i.classList.remove('main-photo');
                        const badge = i.querySelector('.main-badge');
                        if (badge) badge.remove();
                    });
                    document.querySelectorAll('#photosPreviewWrapper .photo-preview-item').forEach(i => {
                        i.classList.remove('main-photo');
                        const badge = i.querySelector('.main-badge');
                        if (badge) badge.remove();
                    });

                    this.classList.add('main-photo');
                    const badge = document.createElement('span');
                    badge.className = 'main-badge';
                    badge.textContent = 'მთავარი';
                    this.appendChild(badge);

                    existingMainImageIdInput.value = this.dataset.id;
                    mainPhotoIndexInput.value = -1;
                    mainIndex = -1;
                });
            });

            document.querySelectorAll('.existing-remove').forEach(btn => {
                btn.addEventListener('click', function (e) {
                    e.stopPropagation();
                    e.preventDefault();
                    photoToDelete = this.dataset.id;
                    if (deleteModal) {
                        deleteModal.show();
                    }
                });
            });

            document.getElementById('confirmDeletePhoto').addEventListener('click', function () {
                if (photoToDelete) {
                    deletedIds.push(parseInt(photoToDelete));
                    deletedImageIdsInput.value = deletedIds.join(',');

                    const item = document.querySelector('#existingPhotosWrapper .photo-preview-item[data-id="' + photoToDelete + '"]');
                    if (item) {
                        item.classList.add('deleted');
                        item.style.display = 'none';
                    }
                    photoToDelete = null;
                }
                if (deleteModal) {
                    deleteModal.hide();
                }
            });

            document.getElementById('cancelDeletePhoto').addEventListener('click', function () {
                photoToDelete = null;
                if (deleteModal) {
                    deleteModal.hide();
                }
            });

            function updatePreview() {
                photosPreviewWrapper.innerHTML = '';
                selectedFiles.forEach((file, idx) => {
                    const wrapper = document.createElement('div');
                    wrapper.className = 'photo-preview-item' + (idx === mainIndex ? ' main-photo' : '');

                    const img = document.createElement('img');
                    img.src = URL.createObjectURL(file);
                    img.className = 'photo-preview-img';

                    const removeBtn = document.createElement('button');
                    removeBtn.type = 'button';
                    removeBtn.className = 'photo-remove-btn';
                    removeBtn.innerHTML = '<svg width="16" height="16" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 16 16"><line x1="4" y1="4" x2="12" y2="12"/><line x1="12" y1="4" x2="4" y2="12"/></svg>';
                    removeBtn.onclick = function (e) {
                        e.stopPropagation();
                        selectedFiles.splice(idx, 1);
                        if (mainIndex >= selectedFiles.length) mainIndex = Math.max(-1, selectedFiles.length - 1);
                        if (mainIndex === idx) mainIndex = -1;
                        mainPhotoIndexInput.value = mainIndex;
                        updatePreview();
                    };

                    wrapper.appendChild(img);
                    wrapper.appendChild(removeBtn);

                    if (idx === mainIndex) {
                        const badge = document.createElement('span');
                        badge.className = 'main-badge';
                        badge.textContent = 'მთავარი';
                        wrapper.appendChild(badge);
                    }

                    wrapper.onclick = function () {
                        document.querySelectorAll('#existingPhotosWrapper .photo-preview-item').forEach(i => {
                            i.classList.remove('main-photo');
                            const badge = i.querySelector('.main-badge');
                            if (badge) badge.remove();
                        });
                        existingMainImageIdInput.value = '';

                        mainIndex = idx;
                        mainPhotoIndexInput.value = mainIndex;
                        updatePreview();
                    };

                    photosPreviewWrapper.appendChild(wrapper);
                });
            }

            if (photosInput) {
                photosInput.addEventListener('change', function () {
                    photosLimitMsg.style.display = 'none';
                    const files = Array.from(this.files || []);
                    if ((selectedFiles.length + files.length) > MAX_PHOTOS) {
                        photosLimitMsg.style.display = 'block';
                        photosInput.value = '';
                        return;
                    }
                    files.forEach(file => {
                        if (!selectedFiles.some(f => f.name === file.name && f.size === file.size)) {
                            selectedFiles.push(file);
                        }
                    });
                    updatePreview();
                    photosInput.value = '';
                });
            }

            if (clearPhotosBtn) {
                clearPhotosBtn.addEventListener('click', function () {
                    selectedFiles = [];
                    mainIndex = -1;
                    mainPhotoIndexInput.value = -1;
                    updatePreview();
                    photosLimitMsg.style.display = 'none';
                });
            }

            document.getElementById('editProductForm').addEventListener('submit', function (e) {
                if (selectedFiles.length > MAX_PHOTOS) {
                    photosLimitMsg.style.display = 'block';
                    e.preventDefault();
                    return false;
                }
                const dt = new DataTransfer();
                selectedFiles.forEach(f => dt.items.add(f));
                photosInput.files = dt.files;
            });
        });
    </script>
}