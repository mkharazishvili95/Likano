<!DOCTYPE html>
<html lang="ka" class="h-full">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
          integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
          crossorigin="anonymous"
          referrerpolicy="no-referrer" />

    <style>
        :root {
            --bg-gradient-start: #0f172a;
            --bg-gradient-end: #1e293b;
            --accent: #8b5cf6;
            --accent-2: #a78bfa;
            --text-main: #f8fafc;
            --text-muted: #cbd5e1;
            --danger: #fca5a5;
            --success-bg: rgba(34, 197, 94, 0.15);
            --success-border: rgba(34, 197, 94, 0.35);
            --glass-bg: rgba(255, 255, 255, 0.08);
            --glass-border: rgba(255, 255, 255, 0.16);
        }

        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            background: linear-gradient(135deg, var(--bg-gradient-start), var(--bg-gradient-end));
            color: var(--text-main);
            font-family: "Segoe UI", system-ui, -apple-system, Roboto, "Helvetica Neue", Arial, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
        }

        .auth-container {
            width: 100%;
            max-width: 480px;
            padding: 20px;
            margin: 0 auto;
        }

        .card-glass {
            background: var(--glass-bg);
            backdrop-filter: blur(18px);
            -webkit-backdrop-filter: blur(18px);
            border: 1px solid var(--glass-border);
            border-radius: 20px;
            box-shadow: 0 12px 40px rgba(0, 0, 0, 0.35);
            overflow: hidden;
        }

        .card-header {
            padding: 32px 32px 20px;
            text-align: center;
            border-bottom: 1px solid var(--glass-border);
            background: linear-gradient(180deg, rgba(139, 92, 246, 0.18), rgba(167, 139, 250, 0.08));
        }

        .title {
            margin: 0;
            font-weight: 800;
            font-size: 2.2rem;
            background: linear-gradient(to right, #ffffff, #e9d5ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .card-body {
            padding: 32px;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-muted);
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            background: rgba(255, 255, 255, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: var(--text-main);
            border-radius: 12px;
            padding: 12px 16px;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.5);
            }

            .form-control:focus, .form-select:focus {
                border-color: var(--accent);
                box-shadow: 0 0 0 0.25rem rgba(139, 92, 246, 0.25);
                background: rgba(255, 255, 255, 0.18);
            }

        .input-group .btn-toggle {
            border: 1px solid rgba(255, 255, 255, 0.25);
            border-left: none;
            background: rgba(255, 255, 255, 0.08);
            color: var(--text-muted);
            border-radius: 0 12px 12px 0;
            padding: 0 16px;
        }

            .input-group .btn-toggle:hover {
                background: rgba(255, 255, 255, 0.18);
                color: #fff;
            }

        .text-danger {
            color: var(--danger) !important;
            font-size: 0.9rem;
        }

        .alert-success {
            background: var(--success-bg);
            border: 1px solid var(--success-border);
            color: #d1fae5;
            border-radius: 12px;
            padding: 12px 16px;
        }

        .btn-primary {
            background: linear-gradient(to right, var(--accent), var(--accent-2));
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 700;
            font-size: 1.05rem;
            transition: all 0.2s ease;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 24px rgba(139, 92, 246, 0.4);
            }

        .btn-link {
            color: var(--text-muted);
            font-weight: 600;
            text-decoration: none;
            font-size: 0.95rem;
        }

            .btn-link:hover {
                color: #fff;
                text-decoration: underline;
            }

        @@media (max-width: 480px) {
            .auth-container

        {
            padding: 16px;
        }

        .card-header {
            padding: 28px 24px 16px;
        }

        .card-body {
            padding: 24px;
        }

        .title {
            font-size: 1.9rem;
        }

        }
    </style>
</head>
<body>
    <div class="auth-container">
        <div class="card-glass">
            <div class="card-header">
                <h2 class="title">@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                @RenderBody()
            </div>
        </div>
    </div>

    <script>
        function toggleVisibility(inputId, btn) {
            const input = document.getElementById(inputId);
            if (input.type === 'password') {
                input.type = 'text';
                btn.textContent = 'Hide';
            } else {
                input.type = 'password';
                btn.textContent = 'Show';
            }
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>