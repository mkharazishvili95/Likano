<!DOCTYPE html>
<html lang="ka">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Likano</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --primary-soft: #eff6ff;
            --dark: #0f172a;
            --slate: #64748b;
            --bg: #f8fafc;
            --border-color: #e2e8f0;
            --card-shadow: 0 4px 20px -2px rgba(15,23,42,.05);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg);
            color: var(--dark);
        }

        header {
            background: var(--bg);
            border-bottom: 1px solid var(--border-color);
        }

        .container-header {
            max-width: 1380px;
            margin: 0 auto;
            padding: 16px 32px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
        }

            .logo img {
                height: 96px;
                max-height: 96px;
                width: auto;
                transition: transform .25s ease;
            }

            .logo:hover img {
                transform: scale(1.05) rotate(-2deg);
            }

        .contact-group {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .contact-btn {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 10px 16px;
            background: #fff;
            border: 1px solid var(--border-color);
            border-radius: 10px;
            color: var(--dark);
            text-decoration: none;
            font-weight: 500;
            font-size: 1.05rem;
            transition: all 0.25s ease;
            white-space: nowrap;
        }

            .contact-btn:hover {
                background: var(--primary-soft);
                color: var(--primary);
                border-color: var(--primary);
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(37,99,235,0.12);
            }

            .contact-btn i {
                font-size: 1.3rem;
            }

            .contact-btn.phone i {
                color: #10b981;
            }

            .contact-btn.map i {
                color: #ef4444;
            }

        main {
            max-width: 1380px;
            margin: 32px auto 48px;
            padding: 0 24px;
        }

        footer {
            text-align: center;
            padding: 40px 0 20px;
            font-size: 0.97rem;
            color: var(--slate);
            background: var(--bg);
        }

        @@media (max-width: 991px) {
            .container-header

        {
            flex-direction: column;
            gap: 20px;
            padding: 16px 20px;
        }

        .logo img {
            height: 80px;
        }

        .contact-group {
            flex-direction: column;
            width: 100%;
        }

        .contact-btn {
            justify-content: center;
            width: 100%;
        }

        }

        @@media (max-width: 576px) {
            .logo img

        {
            height: 68px;
        }

        .contact-btn {
            font-size: 0.98rem;
            padding: 9px 14px;
        }

        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <div class="container-header">
            <a class="logo" href="/">
                <img src="https://ik.imagekit.io/rqxdk712q/products/17827bc1-7332-4122-b0aa-7e5adc3e229e_likanologo"
                     alt="Likano Logo" />
            </a>

            <div class="contact-group">
                <a href="tel:+995599457950" class="contact-btn phone" title="დაკავშირება">
                    <i class="fas fa-phone-alt"></i>
                    599 45 79 50
                </a>

                <a href="/contact" class="contact-btn map" title="სრული მისამართი და რუკა">
                    <i class="fas fa-map-marker-alt"></i>
                    თბილისი, აგლაძის #15
                </a>
            </div>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year Likano.Ge — ყველა უფლება დაცულია.
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>