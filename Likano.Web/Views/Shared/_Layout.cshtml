<!DOCTYPE html>
<html lang="ka">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Likano</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary: #2563eb;
            --primary-hover: #1d4ed8;
            --primary-soft: #eff6ff;
            --dark: #0f172a;
            --slate: #64748b;
            --bg: #f8fafc;
            --border-color: #e2e8f0;
            --card-shadow: 0 4px 20px -2px rgba(15,23,42,.05);
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg);
            color: var(--dark);
        }

        /* ================= HEADER ================= */

        header {
            background: var(--bg);
            border-bottom: 1px solid var(--border-color);
        }

        .container-header {
            max-width: 1380px;
            margin: 0 auto;
            padding: 16px 32px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .logo {
            display: flex;
            align-items: center;
            text-decoration: none;
        }

            .logo img {
                height: 120px;
                transition: transform .3s ease;
            }

            .logo:hover img {
                transform: scale(1.05) rotate(-2deg);
            }

        .contact {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 1.15rem;
            font-weight: 500;
            background: #fff;
            border: 1px solid var(--border-color);
            border-radius: 14px;
            padding: 12px 20px;
            box-shadow: var(--card-shadow);
            white-space: nowrap;
        }

            .contact i {
                color: var(--primary);
                font-size: 1.4rem;
            }

        /* ================= MAIN ================= */

        main {
            max-width: 1380px;
            margin: 32px auto 48px;
            padding: 0 24px;
            border: none;
        }

        /* ================= FOOTER ================= */

        footer {
            text-align: center;
            padding: 40px 0 20px;
            font-size: 0.97rem;
            color: var(--slate);
            background: var(--bg);
            border: none;
        }

        /* ❌ სრულად ვშლით არასასურველ ხაზებს */
        .container-fluid {
            border: none !important;
        }

        /* ================= RESPONSIVE ================= */

        @@media (max-width: 991px) {
            .container-header {
                flex-direction: column;
                gap: 16px;
                padding: 16px 20px;
            }

            .logo img {
                height: 80px;
            }

            .contact {
                font-size: 1.05rem;
                padding: 10px 18px;
            }
        }

        @@media (max-width: 576px) {
            .logo img {
                height: 68px;
            }

            .contact {
                font-size: 1rem;
                padding: 9px 16px;
            }
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>

    <header>
        <div class="container-header">

            <a class="logo" href="@Url.Page("/Index")">
                <img src="https://ik.imagekit.io/rqxdk712q/products/17827bc1-7332-4122-b0aa-7e5adc3e229e_likanologo"
                     alt="Likano Logo" />
            </a>

            <div class="contact">
                <i class="fas fa-phone-alt"></i>
                599-45-79-50
            </div>

        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        © @DateTime.Now.Year Likano.Ge — ყველა უფლება დაცულია.
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
