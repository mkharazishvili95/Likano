@{
    Layout = "_Layout";
    ViewData["Title"] = "Likano.Ge - კონტაქტი";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=BPG+Arial:wght@400;700&display=swap');

        body {
            font-family: 'BPG Arial', sans-serif;
        }

        .contact-section {
            padding: 48px 0;
            min-height: calc(100vh - 200px);
        }

        .page-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 40px;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 10px;
            padding: 12px 24px;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            background: white;
            color: #2563eb;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            border: 1.5px solid #e2e8f0;
        }

            .btn-back:hover {
                background: #2563eb;
                color: white;
                transform: translateX(-5px);
                box-shadow: 0 4px 16px rgba(37,99,235,0.25);
                border-color: #2563eb;
            }

            .btn-back i {
                font-size: 1.2rem;
                transition: transform 0.3s ease;
            }

            .btn-back:hover i {
                transform: translateX(-3px);
            }

        .page-title {
            font-size: 2rem;
            font-weight: 800;
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
            padding-bottom: 0.2em;
            line-height: 1.2;
            box-decoration-break: clone;
        }

        .contact-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 24px;
        }

        .contact-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 32px;
            align-items: start;
        }

        .contact-card {
            background: white;
            border: 1px solid #e2e8f0;
            border-radius: 24px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            padding: 48px 40px;
            transition: all 0.4s ease;
            height: 100%;
        }

            .contact-card:hover {
                transform: translateY(-8px);
                box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            }

        .card-title {
            font-size: 1.85rem;
            font-weight: 800;
            letter-spacing: -0.5px;
            margin-bottom: 36px;
            background: linear-gradient(135deg, #2563eb 0%, #7c3aed 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            padding-bottom: 0.2em;
            line-height: 1.2;
            box-decoration-break: clone;
        }

        .info-block {
            margin-bottom: 32px;
        }

            .info-block:last-child {
                margin-bottom: 0;
            }

        .info-header {
            display: flex;
            align-items: center;
            gap: 12px;
            margin-bottom: 12px;
        }

            .info-header i {
                color: #2563eb;
                font-size: 1.4rem;
                width: 24px;
                text-align: center;
            }

        .info-label {
            font-weight: 700;
            font-size: 1.1rem;
            color: #0f172a;
        }

        .info-content {
            color: #64748b;
            font-size: 1.05rem;
            line-height: 1.8;
            padding-left: 36px;
            font-weight: 500;
        }

            .info-content strong {
                color: #0f172a;
                font-weight: 700;
            }

            .info-content a {
                color: #2563eb;
                text-decoration: none;
                font-weight: 600;
                transition: all 0.3s ease;
                display: inline-block;
                position: relative;
            }

                .info-content a::after {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background: #2563eb;
                    transition: width 0.3s ease;
                }

                .info-content a:hover {
                    color: #1d4ed8;
                }

                    .info-content a:hover::after {
                        width: 100%;
                    }

        .contact-map {
            border-radius: 24px;
            overflow: hidden;
            border: 1px solid #e2e8f0;
            box-shadow: 0 20px 40px rgba(0,0,0,0.08);
            height: 100%;
            min-height: 500px;
            background: #f8fafc;
            transition: all 0.4s ease;
        }

            .contact-map:hover {
                box-shadow: 0 30px 60px rgba(0,0,0,0.15);
            }

            .contact-map iframe {
                width: 100%;
                height: 100%;
                border: 0;
                display: block;
            }

        @@media (max-width: 991px) {
            .contact-grid

        {
            grid-template-columns: 1fr;
            gap: 24px;
        }

        .contact-map {
            min-height: 400px;
        }

        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 16px;
        }

        .page-title {
            font-size: 1.75rem;
        }

        }

        @@media (max-width: 768px) {
            .contact-section

        {
            padding: 32px 0;
        }

        .contact-card {
            padding: 36px 28px;
            border-radius: 20px;
        }

        .card-title {
            font-size: 1.6rem;
            margin-bottom: 28px;
        }

        .contact-map {
            min-height: 350px;
            border-radius: 20px;
        }

        .info-content {
            padding-left: 32px;
            font-size: 1rem;
        }

        }

        @@media (max-width: 576px) {
            .contact-container

        {
            padding: 0 16px;
        }

        .btn-back {
            padding: 10px 20px;
            font-size: 0.95rem;
        }

        .page-title {
            font-size: 1.5rem;
        }

        .contact-card {
            padding: 28px 20px;
        }

        .card-title {
            font-size: 1.4rem;
            margin-bottom: 24px;
        }

        .info-block {
            margin-bottom: 24px;
        }

        .info-header i {
            font-size: 1.2rem;
        }

        .info-label {
            font-size: 1rem;
        }

        .contact-map {
            min-height: 300px;
        }

        }
    </style>
}

<section class="contact-section">
    <div class="contact-container">
        <div class="page-header">
            @* <a href="/" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                <span>მთავარ გვერდზე</span>
            </a> *@
            <h1 class="page-title">კონტაქტი</h1>
        </div>

        <div class="contact-grid">
            <div class="contact-card">
                <h2 class="card-title">საკონტაქტო ინფორმაცია</h2>

                <div class="info-block">
                    <div class="info-header">
                        <i class="fas fa-map-marker-alt"></i>
                        <span class="info-label">მისამართი</span>
                    </div>
                    <div class="info-content">
                        თბილისი, აგლაძის ქ. 15,<br>
                        სავაჭრო ცენტრი <strong>მეგალაინი</strong>, მაღაზია <strong>№ 1</strong>
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-header">
                        <i class="fas fa-phone-alt"></i>
                        <span class="info-label">ტელეფონი</span>
                    </div>
                    <div class="info-content">
                        <a href="tel:+995599457950">599 45 79 50</a><br>
                        <a href="tel:+995598336060">598 33 60 60</a>
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-header">
                        <i class="fas fa-clock"></i>
                        <span class="info-label">სამუშაო საათები</span>
                    </div>
                    <div class="info-content">
                        ორშაბათი - კვირა: <strong>10:00 - 18:00</strong><br>
                    </div>
                </div>
            </div>

            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.073964857624!2d44.7807375!3d41.7299765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x404472c46bfb9fb9%3A0xb7f22c7cb9a1ecb8!2sMegaline!5e0!3m2!1ska!2sge!4v1700000000000!5m2!1ska!2sge"
                        allowfullscreen=""
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</section>