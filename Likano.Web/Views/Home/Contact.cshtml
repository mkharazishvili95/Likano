@{
    Layout = "_Layout";
    ViewData["Title"] = "კონტაქტი";
}

<section class="contact-section">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-6">
                <div class="contact-card">
                    <h2 class="fw-bold mb-5">საკონტაქტო ინფორმაცია</h2>

                    <div class="mb-4 info-block">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-map-marker-alt"></i>
                            <span class="fw-semibold">მისამართი</span>
                        </div>
                        <div class="info-text">
                            თბილისი, აგლაძის ქ. 15,<br>
                            სავაჭრო ცენტრი <strong>მეგალაინი</strong>, მაღაზია <strong>№ 1</strong>
                        </div>
                    </div>

                    <div class="mb-4 info-block">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-phone-alt"></i>
                            <span class="fw-semibold">კონტაქტი</span>
                        </div>
                        <div class="info-text">
                            <a href="tel:599457950">599 45 79 50</a><br>
                            <a href="tel:598336060">598 33 60 60</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="contact-map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.073964857624!2d44.7807375!3d41.7299765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x404472c46bfb9fb9%3A0xb7f22c7cb9a1ecb8!2sMegaline!5e0!3m2!1ska!2sge!4v1700000000000!5m2!1ska!2sge"
                            width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                            referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --primary-light: #818cf8;
        --secondary: #ec4899;
        --surface: #ffffff;
        --surface-alt: #f8fafc;
        --border: #e2e8f0;
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 20px 40px rgba(0,0,0,0.12);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        margin: 0;
    }

    .contact-section {
        padding: 48px 0;
        min-height: 100vh;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin: 0 -12px;
        align-items: stretch;
    }

    .col-md-6 {
        flex: 0 0 calc(50% - 24px);
        max-width: calc(50% - 24px);
        padding: 0 12px;
        display: flex;
    }

        .col-md-6:first-child {
            margin-right: 24px;
        }

    .g-4 {
        gap: 0;
    }

    .contact-card {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 24px;
        box-shadow: var(--shadow-lg);
        padding: 40px 32px;
        height: 500px;
        width: 100%;
        display: flex;
        flex-direction: column;
        transition: var(--transition);
    }

        .contact-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15);
        }

        .contact-card h2 {
            font-size: 1.75rem;
            font-weight: 800;
            letter-spacing: -0.5px;
            margin-bottom: 2rem;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .contact-card .fw-semibold {
            font-weight: 600;
            font-size: 1.05rem;
            color: var(--text-primary);
        }

        .contact-card i {
            color: var(--primary);
            font-size: 1.25rem;
            margin-right: 12px;
        }

        .contact-card a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: var(--transition);
        }

            .contact-card a:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

    .info-block {
        margin-bottom: 2rem;
    }

    .d-flex {
        display: flex;
    }

    .align-items-center {
        align-items: center;
    }

    .mb-2 {
        margin-bottom: 0.75rem;
    }

    .mb-4 {
        margin-bottom: 1.5rem;
    }

    .mb-5 {
        margin-bottom: 3rem;
    }

    .fw-bold {
        font-weight: 700;
    }

    .info-text {
        color: var(--text-secondary);
        font-size: 1.05rem;
        line-height: 1.8;
        padding-left: 36px;
        font-weight: 500;
    }

        .info-text strong {
            color: var(--text-primary);
            font-weight: 700;
        }

    .contact-map {
        border-radius: 24px;
        overflow: hidden;
        border: 1px solid var(--border);
        box-shadow: var(--shadow-lg);
        height: 500px;
        width: 100%;
        background: var(--surface-alt);
        transition: var(--transition);
    }

        .contact-map:hover {
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.15);
        }

        .contact-map iframe {
            width: 100%;
            height: 100%;
            border: 0;
        }

    @@media (max-width: 768px) {
        .col-md-6

    {
        flex: 0 0 100%;
        max-width: 100%;
        margin-bottom: 24px;
        margin-right: 0 !important;
    }

    .contact-card,
    .contact-map {
        height: 400px;
        border-radius: 20px;
    }

    .contact-card {
        padding: 32px 24px;
    }

    .contact-section {
        padding: 32px 0;
    }

    }

    @@media (max-width: 576px) {
        .contact-card, .contact-map

    {
        height: 350px;
    }

    .contact-card {
        padding: 24px 20px;
    }

        .contact-card h2 {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

    .info-text {
        padding-left: 32px;
        font-size: 1rem;
    }

    }
</style>