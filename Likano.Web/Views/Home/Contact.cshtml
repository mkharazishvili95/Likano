@{
    Layout = "_Layout";
    ViewData["Title"] = "კონტაქტი";
}

<section class="contact-section">

    <div class="row g-4 align-items-stretch">

        <div class="col-md-6">
            <div class="contact-card">
                <h2 class="fw-bold mb-5">საკონტაქტო ინფორმაცია</h2>

                <div class="mb-4 info-block">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-map-marker-alt"></i>
                        <span class="fw-semibold">მისამართი</span>
                    </div>
                    <div class="info-text">
                        თბილისი, აგლაძის ქ.15,<br>
                        სავაჭრო ცენტრი მეგალაინი, მაღაზია #1
                    </div>
                </div>

                <div class="mb-4 info-block">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-phone-alt"></i>
                        <span class="fw-semibold">კონტაქტი</span>
                    </div>
                    <div class="info-text">
                        <a href="tel:599457950">599-45-79-50</a><br>
                        <a href="tel:598336060">598-33-60-60</a>
                    </div>
                </div>

                <a href="https://www.google.com/maps?ll=41.729924,44.783362&z=17&t=m&hl=ka&gl=GE&mapclient=embed&cid=13254705567506754744" target="_blank" rel="noopener" class="map-link mt-3">
                    <i class="fas fa-map"></i> რუკაზე ნახვა
                </a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="contact-map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2992.073964857624!2d44.7807375!3d41.7299765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x404472c46bfb9fb9%3A0xb7f22c7cb9a1ecb8!2sMegaline!5e0!3m2!1ska!2sge!4v1700000000000!5m2!1ska!2sge"
                        width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>

    </div>

</section>

<style>
    :root {
        --primary: #2563eb;
        --primary-dark: #1d4ed8;
        --dark: #0f172a;
        --slate: #64748b;
        --card-shadow: 0 8px 32px rgba(37,99,235,0.08), 0 1.5px 6px rgba(15,23,42,0.04);
    }

    body {
        font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #f8fafc;
        margin: 0;
    }

    .contact-section {
        max-width: 1600px;
        margin: 48px auto;
        padding: 0 12px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        margin: -0.5rem;
    }

    .col-md-6 {
        flex: 0 0 50%;
        max-width: 50%;
        padding: 0.5rem;
    }

    .g-4 {
        gap: 1.5rem;
    }

    .align-items-stretch {
        align-items: stretch;
    }

    .contact-card {
        background: #fff;
        border-radius: 20px;
        box-shadow: var(--card-shadow);
        padding: 40px 32px;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        height: 100%;
        min-height: 500px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .contact-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 12px 40px rgba(37,99,235,0.15), 0 2px 10px rgba(15,23,42,0.08);
        }

        .contact-card h2 {
            font-size: 1.75rem;
            color: var(--primary);
            font-weight: 800;
            letter-spacing: -0.5px;
            margin-bottom: 2rem;
        }

        .contact-card .fw-semibold {
            font-weight: 600;
            font-size: 1.05rem;
            color: var(--dark);
        }

        .contact-card i {
            color: var(--primary);
            font-size: 1.25rem;
            margin-right: 8px;
        }

        .contact-card a {
            color: var(--primary);
            text-decoration: none;
            font-weight: 600;
            transition: color 0.2s;
        }

            .contact-card a:hover {
                color: var(--primary-dark);
                text-decoration: underline;
            }

    .info-text {
        color: var(--slate);
        font-size: 1.05rem;
        line-height: 1.8;
        margin-bottom: 12px;
    }

    .map-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        font-size: 1.05rem;
        text-decoration: underline;
        color: var(--primary);
        transition: color 0.2s;
        margin-top: 12px;
    }

        .map-link:hover {
            color: var(--primary-dark);
        }

    .contact-map {
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--card-shadow);
        min-height: 500px;
        height: 100%;
        background: #e0e7ef;
    }

        .contact-map iframe {
            width: 100%;
            height: 100%;
            min-height: 500px;
            border: 0;
        }

    @@media (max-width: 991px) {
        .col-md-6 {
            flex: 0 0 100%;
            max-width: 100%;
        }

        .contact-section {
            padding: 0 12px;
        }

        .contact-card,
        .contact-map {
            border-radius: 12px;
            min-height: 400px;
        }

        .contact-card {
            padding: 28px 20px;
        }

        .contact-map iframe {
            min-height: 400px;
        }
    }

    @@media (max-width: 576px) {
        .contact-card {
            padding: 24px 16px;
            min-height: 350px;
        }

        .contact-map {
            min-height: 300px;
        }

            .contact-map iframe {
                min-height: 300px;
            }

        .contact-section {
            margin-top: 24px;
        }
    }
</style>