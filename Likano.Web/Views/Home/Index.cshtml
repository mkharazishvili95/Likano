        loadProducts();

        let debounceTimer;
        $('#searchForm input, #searchForm select, #sortSelector').on('input change', function () {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(() => {
                page = 1;
                hasMore = true;
                loadProducts();
            }, 500);
        });

        $('#resetFilters').on('click', function () {
            $('#searchForm')[0].reset();
            $('#sortSelector').val('CreateDateDesc');
            $('#stCheck').prop('checked', false);
            page = 1;
            hasMore = true;
            loadProducts();
        });

        $(window).on('scroll', function () {
            if ($(window).scrollTop() + $(window).height() > $(document).height() - 800) {
                loadProducts(true);
            }
        });
    });
