@{
    ViewData["Title"] = "Likano - პრემიუმ სანტექნიკა";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    :root {
        --primary: #2563eb;
        --primary-soft: #eff6ff;
        --dark: #0f172a;
        --slate: #64748b;
        --bg: #f8fafc;
        --border-color: #e2e8f0;
        --card-shadow: 0 4px 20px -2px rgba(15, 23, 42, 0.05);
        --card-shadow-hover: 0 20px 25px -5px rgba(15, 23, 42, 0.1);
    }

    body {
        background-color: var(--bg);
        font-family: 'Inter', sans-serif;
        color: var(--dark);
        -webkit-font-smoothing: antialiased;
    }

    /* --- Sidebar Refinement --- */
    .filter-sidebar {
        background: #ffffff;
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 2rem;
        position: sticky;
        top: 2rem;
        box-shadow: var(--card-shadow);
    }

    .filter-section-title {
        font-size: 0.85rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--slate);
        margin-bottom: 1.25rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-control, .form-select {
        border: 1px solid var(--border-color);
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        transition: all 0.2s;
        background-color: #f9fbff;
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
            background-color: #fff;
        }

    /* --- Product Card - NEW DESIGN --- */
    .product-card {
        background: #ffffff;
        border: 1px solid var(--border-color);
        border-radius: 20px;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        height: 100%;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--card-shadow-hover);
            border-color: var(--primary);
        }

    .img-container {
        aspect-ratio: 1/1;
        background: #fff;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: transform 0.5s ease;
    }

    .product-card:hover .product-img {
        transform: scale(1.1);
    }

    .status-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        z-index: 2;
        padding: 0.4rem 0.8rem;
        border-radius: 10px;
        font-size: 0.75rem;
        font-weight: 600;
        backdrop-filter: blur(8px);
    }

    .card-body {
        padding: 1.5rem;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .category-label {
        font-size: 0.75rem;
        color: var(--primary);
        font-weight: 700;
        text-transform: uppercase;
        margin-bottom: 0.5rem;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.4;
        margin-bottom: 0.75rem;
        color: var(--dark);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 3rem;
    }

    .price-tag {
        font-size: 1.35rem;
        font-weight: 800;
        color: var(--dark);
    }

    .btn-action {
        background: var(--primary-soft);
        color: var(--primary);
        border: none;
        width: 44px;
        height: 44px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s;
    }

    .product-card:hover .btn-action {
        background: var(--primary);
        color: #fff;
    }

    /* Loading Spinner Customization */
    .loader-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 200px;
    }

    @@media (max-width: 768px) {
        .product-title {
            font-size: 1rem;
        }

        .price-tag {
            font-size: 1.2rem;
        }
    }
</style>

<div class="container-fluid py-5 px-lg-5">
    <div class="row g-4">
        <aside class="col-lg-4 col-xl-3">
            <div class="filter-sidebar">
                <h3 class="fw-800 mb-4 h5">ფილტრი</h3>
                <form id="searchForm">
                    <div class="mb-4">
                        <div class="position-relative">
                            <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                            <input type="text" class="form-control ps-5" name="SearchString" placeholder="ნიჟარა, ონკანი...">
                        </div>
                    </div>

                    <div class="filter-group mb-4">
                        <label class="filter-section-title"><i class="bi bi-layers"></i> კატეგორია</label>
                        <select class="form-select" name="CategoryId">
                            <option value="">ყველა კატეგორია</option>
                            @if (ViewBag.Categories != null)
                            {
                                foreach (var item in (SelectList)ViewBag.Categories)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="filter-group mb-4">
                        <label class="filter-section-title"><i class="bi bi-shield-check"></i> ბრენდი</label>
                        <select class="form-select" name="BrandId">
                            <option value="">ყველა ბრენდი</option>
                            @if (ViewBag.Brands != null)
                            {
                                foreach (var item in (SelectList)ViewBag.Brands)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            }
                        </select>
                    </div>

                    <div class="filter-group mb-4">
                        <label class="filter-section-title"><i class="bi bi-currency-dollar"></i> ფასი</label>
                        <div class="d-flex gap-2">
                            <input type="number" class="form-control" name="PriceFrom" placeholder="დან">
                            <input type="number" class="form-control" name="PriceTo" placeholder="მდე">
                        </div>
                    </div>

                    <div class="filter-group mb-4">
                        <label class="filter-section-title"><i class="bi bi-sort-down"></i> დალაგება</label>
                        <select class="form-select" name="SortBy">
                            <option value="">ახალი</option>
                            <option value="PriceAsc">ფასი: ქვემოდან</option>
                            <option value="PriceDesc">ფასი: ზემოდან</option>
                        </select>
                    </div>

                    <div class="form-check form-switch pt-2">
                        <input class="form-check-input" type="checkbox" name="IsAvailable" value="true" id="flexSwitchCheckDefault">
                        <label class="form-check-label fw-600 ms-2" for="flexSwitchCheckDefault">მარაგშია</label>
                    </div>
                </form>
            </div>
        </aside>

        <main class="col-lg-8 col-xl-9">
            <div class="d-flex justify-content-between align-items-end mb-5">
                <div>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-2">
                            <li class="breadcrumb-item small"><a href="/" class="text-decoration-none text-muted">მთავარი</a></li>
                            <li class="breadcrumb-item small active">კატალოგი</li>
                        </ol>
                    </nav>
                    <h1 class="fw-800 m-0 h2">პროდუქცია</h1>
                </div>
                <div class="text-end">
                    <span class="badge bg-dark rounded-pill px-3 py-2" id="resultsCount">0 პროდუქტი</span>
                </div>
            </div>

            <div id="productsGrid" class="row g-4">
            </div>

            <div id="loadingMore" class="loader-wrapper d-none">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">იტვირთება...</span>
                </div>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<script>
    const renderProduct = p => `
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="product-card">
                <div class="img-container">
                    <span class="status-badge ${p.isAvailable ? 'bg-success-subtle text-success' : 'bg-secondary-subtle text-secondary'}">
                        ${p.isAvailable ? '● მარაგშია' : '○ არაა მარაგში'}
                    </span>
                    <img src="${p.images?.[0]?.fileUrl || 'https://ik.imagekit.io/rqxdk712q/products/733b35b7-b949-4a3c-9e64-1de44004c88e_NoImageLogo'}"
                         class="product-img"
                         alt="${p.title}"
                         loading="lazy">
                </div>
                <div class="card-body">
                    <span class="category-label">${p.category?.name || 'სანტექნიკა'}</span>
                    <h3 class="product-title">${p.title || 'პროდუქტის დასახელება'}</h3>
                    <p class="text-muted small mb-4"><i class="bi bi-award me-2"></i>ბრენდი: ${p.brand?.name || '—'}</p>

                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <div class="price-tag">
                            ${(p.price || 0).toLocaleString('ka-GE')} <span style="font-size: 1rem; font-weight: 600;">₾</span>
                        </div>
                        <a href="/Product/Details/${p.id}" class="btn-action" title="დეტალურად">
                            <i class="bi bi-chevron-right fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    `;

    let page = 1;
    const pageSize = 9; // Changed to 9 for better 3-column grid alignment
    let isLoading = false;
    let hasMore = true;

    function loadProducts(append = false) {
        if (isLoading || (!hasMore && append)) return;
        isLoading = true;
        $('#loadingMore').removeClass('d-none');

        const filters = {
            pagination: { pageNumber: page, pageSize }
        };

        $('#searchForm').serializeArray().forEach(item => {
            if (item.value) filters[item.name] = item.value;
        });

        $.ajax({
            url: '/Home/SearchProducts',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(filters),
            success: response => {
                const $grid = $('#productsGrid');
                if (!append) $grid.empty();

                if (response?.items?.length > 0) {
                    response.items.forEach(p => $grid.append(renderProduct(p)));
                    $('#resultsCount').text(`${response.totalCount || response.items.length} პროდუქტი`);
                } else if (!append) {
                    $grid.html(`
                        <div class="col-12 text-center py-5">
                            <i class="bi bi-emoji-frown fs-1 text-muted"></i>
                            <p class="mt-3 text-muted fw-500">მონაცემები ვერ მოიძებნა</p>
                        </div>
                    `);
                    $('#resultsCount').text('0 პროდუქტი');
                }

                hasMore = response.items?.length === pageSize;
                if (hasMore) page++;
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            },
            error: () => {
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            }
        });
    }

    $(function () {
        loadProducts();

        let debounce;
        $('#searchForm input, #searchForm select').on('input change', function () {
            clearTimeout(debounce);
            debounce = setTimeout(() => {
                page = 1;
                hasMore = true;
                loadProducts();
            }, 500);
        });

        $(window).on('scroll', function () {
            if ($(window).scrollTop() + $(window).height() > $(document).height() - 800) {
                loadProducts(true);
            }
        });
    });
</script>