@{
    Layout = "_Layout";
    ViewData["Title"] = "Likano.Ge - სამზარეულოს ტექნიკა";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --primary-light: #818cf8;
        --secondary: #ec4899;
        --success: #10b981;
        --danger: #ef4444;
        --surface: #ffffff;
        --surface-alt: #f8fafc;
        --border: #e2e8f0;
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 20px 40px rgba(0,0,0,0.12);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        font-family: 'Inter', sans-serif;
        color: var(--text-primary);
    }

    .page-wrapper {
        min-height: 100vh;
        padding: 2.5rem 0;
    }

    .filter-sidebar {
        background: var(--surface);
        border: 1px solid var(--border);
        border-radius: 24px;
        padding: 2.5rem;
        position: sticky;
        top: 1.5rem;
        box-shadow: var(--shadow-lg);
        transition: var(--transition);
    }

        .filter-sidebar:hover {
            box-shadow: 0 25px 50px -12px rgba(0,0,0,0.1);
        }

    .sidebar-title {
        font-size: 1.5rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 1.5rem;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .filter-section-title {
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: var(--text-secondary);
        margin-bottom: 0.75rem;
        display: flex;
        gap: 0.4rem;
        align-items: center;
    }

    .form-control,
    .form-select {
        border-radius: 12px;
        padding: 0.75rem 1rem;
        font-size: 0.95rem;
        background: var(--surface-alt);
        border: 1px solid var(--border);
        transition: var(--transition);
        font-weight: 500;
    }

        .form-control:focus,
        .form-select:focus {
            background: var(--surface);
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

        .form-control::placeholder {
            color: var(--text-secondary);
            opacity: 0.7;
        }

     .btn-reset {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        background: linear-gradient(135deg, #ede9fe 0%, #fce7f3 100%);
        color: var(--primary-dark);
        border: none;
        transition: var(--transition);
    }

        .btn-reset:hover {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        } 

    .form-check-input {
        width: 48px;
        height: 24px;
        border-radius: 50px;
        border: 2px solid var(--border);
        background-color: var(--surface-alt);
        cursor: pointer;
        transition: var(--transition);
    }

        .form-check-input:checked {
            background-color: var(--primary);
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.15);
        }

    .form-check-label {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.95rem;
        cursor: pointer;
    }

    .product-card {
        background: var(--surface);
        border-radius: 20px;
        border: 1px solid var(--border);
        height: 100%;
        display: flex;
        flex-direction: column;
        transition: var(--transition);
        box-shadow: var(--shadow-md);
        overflow: hidden;
    }

        .product-card:hover {
            transform: translateY(-8px);
            border-color: var(--primary-light);
            box-shadow: var(--shadow-lg);
        }

    .img-container {
        height: 220px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background: var(--surface-alt);
        border-bottom: 1px solid var(--border);
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: var(--transition);
    }

    .product-card:hover .product-img {
        transform: scale(1.1);
    }

    .status-badge {
        position: absolute;
        top: 1rem;
        left: 1rem;
        font-size: 0.75rem;
        font-weight: 700;
        padding: 0.5rem 1rem;
        border-radius: 50px;
        z-index: 2;
        box-shadow: var(--shadow-sm);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

        .status-badge.in-stock {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        .status-badge.out-of-stock {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }

        .status-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: currentColor;
            animation: pulse 2s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    }

    .card-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .category-label {
        font-size: 0.75rem;
        font-weight: 800;
        color: var(--primary);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .product-title {
        font-size: 1.1rem;
        font-weight: 700;
        line-height: 1.4;
        margin: 0.5rem 0 0.75rem;
        min-height: 3rem;
        color: var(--text-primary);
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .brand-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        font-size: 0.9rem;
        margin-bottom: 1rem;
        font-weight: 500;
    }

        .brand-info i {
            color: var(--primary);
        }

    .price-tag {
        font-size: 1.5rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        letter-spacing: -0.02em;
    }

    .btn-action {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #ede9fe 0%, #fce7f3 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        transition: var(--transition);
        text-decoration: none;
    }

    .product-card:hover .btn-action {
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        color: #fff;
        transform: scale(1.1);
    }

    .header-section {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 1.5rem 2rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border);
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1.5rem;
    }

    .page-title {
        font-size: 2rem;
        font-weight: 900;
        margin: 0;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .header-controls {
        display: flex;
        gap: 1rem;
        align-items: center;
    }

    .results-count {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 700;
        font-size: 0.95rem;
        background: linear-gradient(135deg, var(--text-primary) 0%, var(--text-secondary) 100%);
        color: white;
        box-shadow: var(--shadow-sm);
    }

    .form-select-sm {
        padding: 0.75rem 1rem;
        border-radius: 12px;
        font-weight: 600;
        border: 1px solid var(--border);
        background: var(--surface);
        transition: var(--transition);
    }

        .form-select-sm:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102, 241, 0.1);
        }

    .empty-state {
        text-align: center;
        padding: 5rem 2rem;
        background: var(--surface);
        border-radius: 24px;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border);
    }

        .empty-state i {
            font-size: 4rem;
            color: var(--text-secondary);
            opacity: 0.5;
            margin-bottom: 1.5rem;
        }

        .empty-state p {
            font-size: 1.25rem;
            color: var(--text-secondary);
            font-weight: 600;
            margin: 0;
        }

    .spinner-border {
        color: var(--primary);
    }

    @@media (max-width: 991px) {
        .filter-sidebar

    {
        position: static;
        margin-bottom: 2rem;
    }

    .page-title {
        font-size: 1.5rem;
    }

    .header-section {
        padding: 1.25rem 1.5rem;
    }

    }

    @@media (max-width: 768px) {
        .page-wrapper

    {
        padding: 1.5rem 0;
    }

    .filter-sidebar {
        padding: 1.5rem;
    }

    .header-controls {
        width: 100%;
        justify-content: space-between;
    }

    .product-card {
        height: auto;
    }

    .img-container {
        height: 180px;
    }

    }
</style>

<div class="page-wrapper">
    <div class="container-fluid px-lg-5">
        <div class="row g-4">
            <aside class="col-xl-3 col-lg-4">
                <div class="filter-sidebar">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="sidebar-title m-0">ფილტრები</h5>
                        <button id="resetFilters" class="btn-reset" title="გასუფთავება">
                            <i class="bi bi-arrow-counterclockwise"></i>
                        </button>
                    </div>

                    <form id="searchForm">
                        <div class="mb-3 position-relative">
                            <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                            <input name="SearchString" class="form-control ps-5" placeholder="ძებნა პროდუქტის მიხედვით...">
                        </div>

                        <div class="mb-3">
                            <label class="filter-section-title">
                                <i class="bi bi-grid"></i>
                                კატეგორია
                            </label>
                            <select name="CategoryId" class="form-select">
                                <option value="">ყველა კატეგორია</option>
                                @foreach (var c in (SelectList)ViewBag.Categories)
                                {
                                    <option value="@c.Value">@c.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="filter-section-title">
                                <i class="bi bi-award"></i>
                                ბრენდი
                            </label>
                            <select name="BrandId" class="form-select">
                                <option value="">ყველა ბრენდი</option>
                                @foreach (var b in (SelectList)ViewBag.Brands)
                                {
                                    <option value="@b.Value">@b.Text</option>
                                }
                            </select>
                        </div>

                        <div class="mb-4">
                            <label class="filter-section-title">
                                <i class="bi bi-currency-exchange"></i>
                                ფასი
                            </label>
                            <div class="d-flex gap-2">
                                <input name="PriceFrom" class="form-control" placeholder="დან" type="number">
                                <input name="PriceTo" class="form-control" placeholder="მდე" type="number">
                            </div>
                        </div>

                        <div class="form-check form-switch">
                            <input class="form-check-input" id="stCheck" type="checkbox">
                            <label class="form-check-label" for="stCheck">მხოლოდ მარაგში არსებული</label>
                        </div>
                    </form>
                </div>
            </aside>

            <main class="col-xl-9 col-lg-8">
                <div class="header-section">
                    <h2 class="page-title">პროდუქცია</h2>
                    <div class="header-controls">
                        <span id="resultsCount" class="results-count">0 პროდუქტი</span>
                        <select id="sortSelector" class="form-select form-select-sm">
                            <option value="CreateDateDesc">ახალი პროდუქტები</option>
                            <option value="PopularityDesc">ყველაზე ნახვადი</option>
                            <option value="PriceAsc">ფასი: ზრდადობით</option>
                            <option value="PriceDesc">ფასი: კლებადობით</option>
                        </select>
                    </div>
                </div>

                <div id="productsGrid" class="row g-4"></div>

                <div id="loadingMore" class="text-center py-5 d-none">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">იტვირთება...</span>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    const renderProduct = p => `
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="product-card">
                <div class="img-container">
                    <span class="status-badge ${p.isAvailable ? 'in-stock' : 'out-of-stock'}">
                        ${p.isAvailable ? 'მარაგშია' : 'არაა მარაგში'}
                    </span>
                    <img src="${p.images?.[0]?.fileUrl || 'https://ik.imagekit.io/rqxdk712q/products/733b35b7-b949-4a3c-9e64-1de44004c88e_NoImageLogo'}"
                         class="product-img" alt="${p.title}">
                </div>
                <div class="card-body">
                    <div>
                        <span class="category-label">${p.category?.name || 'Likano'}</span>
                        <h3 class="product-title">${p.title}</h3>
                        <p class="brand-info">
                            <i class="bi bi-award"></i> ${p.brand?.name || 'ბრენდი'}
                        </p>
                    </div>
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <div class="price-tag">
                            ${(p.price || 0).toLocaleString('ka-GE')} <span style="font-size: 1.1rem;">₾</span>
                        </div>
                        <a href="/Details/${p.id}" class="btn-action">
                            <i class="bi bi-chevron-right fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    `;

    let page = 1;
    const pageSize = 9;
    let isLoading = false;
    let hasMore = true;

    function loadProducts(append = false) {
        if (isLoading || (!hasMore && append)) return;
        isLoading = true;
        $('#loadingMore').removeClass('d-none');

        const filters = {
            pagination: { pageNumber: page, pageSize: pageSize },
            SortBy: $('#sortSelector').val()
        };

        $('#searchForm').serializeArray().forEach(item => {
            if (item.value && item.name !== "IsAvailable") {
                filters[item.name] = item.value;
            }
        });

        filters.IsAvailable = $('#stCheck').is(':checked') ? true : null;

        $.ajax({
            url: '/Home/SearchProducts',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(filters),
            success: response => {
                const $grid = $('#productsGrid');
                if (!append) $grid.empty();

                if (response?.items?.length > 0) {
                    response.items.forEach(p => $grid.append(renderProduct(p)));
                    $('#resultsCount').text(`${response.totalCount} პროდუქტი`);
                } else if (!append) {
                    $grid.html(`
                        <div class="col-12">
                            <div class="empty-state">
                                <i class="bi bi-search"></i>
                                <p>პროდუქტები ვერ მოიძებნა</p>
                            </div>
                        </div>
                    `);
                    $('#resultsCount').text('0 პროდუქტი');
                }

                hasMore = (response.items?.length === pageSize);
                if (hasMore) page++;
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            },
            error: () => {
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            }
        });
    }

    $(function () {
        loadProducts();

        let debounce;
        $('#searchForm input, #searchForm select, #sortSelector').on('input change', function () {
            clearTimeout(debounce);
            debounce = setTimeout(() => {
                page = 1;
                hasMore = true;
                loadProducts();
            }, 500);
        });

        $('#stCheck').on('change', function () {
            page = 1;
            hasMore = true;
            loadProducts();
        });

        $('#resetFilters').on('click', function () {
            $('#searchForm')[0].reset();
            $('#sortSelector').val('CreateDateDesc');
            $('#stCheck').prop('checked', false);
            page = 1;
            hasMore = true;
            loadProducts();
        });

        $(window).on('scroll', function () {
            if ($(window).scrollTop() + $(window).height() > $(document).height() - 800) {
                loadProducts(true);
            }
        });
    });
</script>