@{
    Layout = "_Layout";
    ViewData["Title"] = "Likano.Ge - სამზარეულოს ტექნიკა";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

<style>
    :root {
        --primary: #2563eb;
        --primary-hover: #1d4ed8;
        --primary-soft: #eff6ff;
        --dark: #0f172a;
        --slate: #64748b;
        --bg: #f8fafc;
        --border-color: #e2e8f0;
        --card-shadow: 0 4px 20px -2px rgba(15,23,42,.05);
        --card-shadow-hover: 0 20px 25px -5px rgba(15,23,42,.1);
    }

    body {
        background: var(--bg);
        font-family: 'Inter', sans-serif;
        color: var(--dark);
    }

    .filter-sidebar {
        background: #fff;
        border: 1px solid var(--border-color);
        border-radius: 24px;
        padding: 2.2rem;
        position: sticky;
        top: 1.5rem;
        box-shadow: var(--card-shadow);
    }

    .filter-section-title {
        font-size: .75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: .08em;
        color: var(--slate);
        margin-bottom: .75rem;
        display: flex;
        gap: .4rem;
        align-items: center;
    }

    .form-control,
    .form-select {
        border-radius: 14px;
        padding: .7rem .9rem;
        font-size: .95rem;
        background: #f9fbff;
    }

    .product-card {
        background: #fff;
        border-radius: 20px;
        border: 1px solid var(--border-color);
        height: 370px;
        display: flex;
        flex-direction: column;
        transition: .35s;
        box-shadow: var(--card-shadow);
        overflow: hidden;
        justify-content: space-between;
    }

        .product-card:hover {
            transform: translateY(-6px);
            border-color: var(--primary);
            box-shadow: var(--card-shadow-hover);
        }

    .img-container {
        height: 140px;
        padding: 0.7rem;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
    }

    .product-img {
        max-height: 100%;
        max-width: 100%;
        object-fit: contain;
        transition: .4s;
        z-index: 1;
    }

    .product-card:hover .product-img {
        transform: scale(1.08);
    }

    .status-badge {
        position: absolute;
        top: .8rem;
        left: .8rem;
        font-size: .7rem;
        font-weight: 700;
        padding: .3rem .6rem;
        border-radius: 8px;
        z-index: 2;
        opacity: 1;
        transition: none;
        pointer-events: none;
        background-clip: padding-box;
    }

    .card-body {
        padding: 1rem 1.2rem 1rem 1.2rem;
        display: flex;
        flex-direction: column;
        flex: 1;
        justify-content: space-between;
    }

    .category-label {
        font-size: .7rem;
        font-weight: 800;
        color: var(--primary);
        text-transform: uppercase;
    }

    .product-title {
        font-size: 1.05rem;
        font-weight: 700;
        line-height: 1.3;
        margin: .4rem 0 .6rem;
        min-height: 2.6rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .price-tag {
        font-size: 1.15rem;
        font-weight: 800;
    }

    .btn-action {
        width: 40px;
        height: 40px;
        background: var(--primary-soft);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--primary);
        transition: .3s;
    }

    .product-card:hover .btn-action {
        background: var(--primary);
        color: #fff;
    }

    @@media (max-width: 991px) {
        .filter-sidebar {
            position: static;
        }
    }
</style>

<div class="container-fluid px-lg-5 py-5">
    <div class="row g-4">

        <aside class="col-xl-3 col-lg-4">
            <div class="filter-sidebar">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h5 class="fw-bold m-0">ფილტრები</h5>
                    <button id="resetFilters" class="btn btn-link p-0 small text-primary">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </div>

                <form id="searchForm">
                    <div class="mb-3 position-relative">
                        <i class="bi bi-search position-absolute top-50 start-0 translate-middle-y ms-3 text-muted"></i>
                        <input name="SearchString" class="form-control ps-5" placeholder="ძებნა...">
                    </div>

                    <div class="mb-3">
                        <label class="filter-section-title">კატეგორია</label>
                        <select name="CategoryId" class="form-select">
                            <option value="">ყველა</option>
                            @foreach (var c in (SelectList)ViewBag.Categories)
                            {
                                <option value="@c.Value">@c.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="filter-section-title">ბრენდი</label>
                        <select name="BrandId" class="form-select">
                            <option value="">ყველა</option>
                            @foreach (var b in (SelectList)ViewBag.Brands)
                            {
                                <option value="@b.Value">@b.Text</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="filter-section-title">ფასი</label>
                        <div class="d-flex gap-2">
                            <input name="PriceFrom" class="form-control" placeholder="დან">
                            <input name="PriceTo" class="form-control" placeholder="მდე">
                        </div>
                    </div>

                    <div class="form-check form-switch">
                        <input class="form-check-input" id="stCheck" type="checkbox">
                        <label class="form-check-label">მარაგშია</label>
                    </div>
                </form>
            </div>
        </aside>

        <main class="col-xl-9 col-lg-8">
            <div class="d-flex justify-content-between align-items-end mb-4 flex-wrap gap-3">
                <h2 class="fw-bold m-0">პროდუქცია</h2>
                <div class="d-flex gap-3 align-items-center">
                    <span id="resultsCount" class="badge bg-dark">0 პროდუქტი</span>
                    <select id="sortSelector" class="form-select form-select-sm">
                        <option value="CreateDateDesc">ახალი</option>
                        <option value="PriceAsc">ფასი ↑</option>
                        <option value="PriceDesc">ფასი ↓</option>
                    </select>
                </div>
            </div>

            <div id="productsGrid" class="row g-4"></div>
            <div id="loadingMore" class="text-center py-4 d-none">
                <div class="spinner-border text-primary"></div>
            </div>
        </main>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script>
    const renderProduct = p => `
        <div class="col-12 col-sm-6 col-xl-4">
            <div class="product-card">
                <div class="img-container">
                    <span class="status-badge ${p.isAvailable ? 'bg-success-subtle text-success' : 'bg-secondary-subtle text-secondary'}">
                        ${p.isAvailable ? '● მარაგშია' : '○ არაა მარაგში'}
                    </span>
                    <img src="${p.images?.[0]?.fileUrl || 'https://ik.imagekit.io/rqxdk712q/products/733b35b7-b949-4a3c-9e64-1de44004c88e_NoImageLogo'}"
                         class="product-img" alt="${p.title}">
                </div>
                <div class="card-body">
                    <span class="category-label">${p.category?.name || 'Likano'}</span>
                    <h3 class="product-title">${p.title}</h3>
                    <p class="text-muted small mb-4">
                        <i class="bi bi-award me-1"></i> ${p.brand?.name || 'ბრენდი'}
                    </p>
                    <div class="mt-auto d-flex justify-content-between align-items-center">
                        <div class="price-tag">
                            ${(p.price || 0).toLocaleString('ka-GE')} <span style="font-size: 1rem;">₾</span>
                        </div>
                        <a href="/Details/${p.id}" class="btn-action">
                            <i class="bi bi-chevron-right fs-5"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    `;

    let page = 1;
    const pageSize = 9;
    let isLoading = false;
    let hasMore = true;

    function loadProducts(append = false) {
        if (isLoading || (!hasMore && append)) return;
        isLoading = true;
        $('#loadingMore').removeClass('d-none');

        const filters = {
            pagination: { pageNumber: page, pageSize: pageSize },
            SortBy: $('#sortSelector').val() 
        };

        $('#searchForm').serializeArray().forEach(item => {
            if (item.value && item.name !== "IsAvailable") {
                filters[item.name] = item.value;
            }
        });

        filters.IsAvailable = $('#stCheck').is(':checked') ? true : null;

        $.ajax({
            url: '/Home/SearchProducts',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify(filters),
            success: response => {
                const $grid = $('#productsGrid');
                if (!append) $grid.empty();

                if (response?.items?.length > 0) {
                    response.items.forEach(p => $grid.append(renderProduct(p)));
                    $('#resultsCount').text(`${response.totalCount} პროდუქტი`);
                } else if (!append) {
                    $grid.html(`
                        <div class="col-12 text-center py-5">
                            <i class="bi bi-search fs-1 text-muted"></i>
                            <p class="mt-3 text-muted">პროდუქტები ვერ მოიძებნა</p>
                        </div>
                    `);
                    $('#resultsCount').text('0 პროდუქტი');
                }

                hasMore = (response.items?.length === pageSize);
                if (hasMore) page++;
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            },
            error: () => {
                isLoading = false;
                $('#loadingMore').addClass('d-none');
            }
        });
    }

    $(function () {
        loadProducts();

        let debounce;
        $('#searchForm input, #searchForm select, #sortSelector').on('input change', function () {
            clearTimeout(debounce);
            debounce = setTimeout(() => {
                page = 1;
                hasMore = true;
                loadProducts();
            }, 500);
        });

        $('#resetFilters').on('click', function () {
            $('#searchForm')[0].reset();
            $('#sortSelector').val('CreateDateDesc');
            page = 1;
            hasMore = true;
            loadProducts();
        });

        $(window).on('scroll', function () {
            if ($(window).scrollTop() + $(window).height() > $(document).height() - 800) {
                loadProducts(true);
            }
        });
    });
</script>