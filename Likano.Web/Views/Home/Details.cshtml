@model Likano.Infrastructure.Queries.Product.Models.Details.GetProductDetailsResponse

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title ?? "პროდუქტის დეტალები";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --surface: #ffffff;
        --surface-hover: #f8f9fa;
        --border-color: rgba(0,0,0,0.08);
        --shadow-sm: 0 2px 8px rgba(0,0,0,0.04);
        --shadow-md: 0 4px 16px rgba(0,0,0,0.08);
        --shadow-lg: 0 12px 48px rgba(0,0,0,0.12);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .product-page-wrapper {
        min-height: 100vh;
        background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
        padding: 2rem 0 4rem 0;
    }

    .product-details-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .product-details-card {
        background: var(--surface);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border-color);
    }

    .product-gallery-section {
        padding: 3rem;
        background: linear-gradient(135deg, #fafafa 0%, #f5f5f5 100%);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        position: sticky;
        top: 20px;
    }

    .main-image-container {
        width: 100%;
        max-width: 600px;
        aspect-ratio: 1;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: var(--shadow-lg);
        position: relative;
        background: white;
        border: 1px solid var(--border-color);
    }

    .product-main-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        cursor: zoom-in;
        transition: var(--transition);
    }

        .product-main-image:hover {
            transform: scale(1.05);
        }

    .image-badge {
        position: absolute;
        top: 20px;
        right: 20px;
        background: rgba(255,255,255,0.95);
        backdrop-filter: blur(10px);
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        box-shadow: var(--shadow-md);
    }

    .thumbnail-gallery {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 600px;
    }

    .thumbnail-item {
        width: 80px;
        height: 80px;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        border: 3px solid transparent;
        transition: var(--transition);
        box-shadow: var(--shadow-sm);
    }

        .thumbnail-item:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
            border-color: #667eea;
        }

        .thumbnail-item.active {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.2);
        }

        .thumbnail-item img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .product-info-section {
        padding: 3rem;
    }

    .product-header {
        margin-bottom: 2rem;
    }

    .product-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .product-code {
        display: inline-block;
        background: linear-gradient(135deg, #e0e7ff 0%, #f3e8ff 100%);
        color: #5b21b6;
        padding: 6px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
    }

    .product-description {
        font-size: 1.1rem;
        color: #6b7280;
        line-height: 1.8;
        margin-bottom: 2rem;
    }

    .price-availability-row {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2.5rem;
        flex-wrap: wrap;
    }

    .product-price {
        font-size: 3rem;
        font-weight: 800;
        background: var(--primary-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .availability-badge {
        padding: 12px 24px;
        border-radius: 30px;
        font-weight: 600;
        font-size: 1rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .availability-badge.in-stock {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        .availability-badge.out-of-stock {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }

        .availability-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: currentColor;
        }

    .product-specs {
        background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
        border-radius: 20px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid var(--border-color);
    }

    .specs-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #1a1a1a;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .specs-title::before {
            content: '●';
            color: #667eea;
            font-size: 1.2rem;
        }

    .spec-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1rem;
    }

    .spec-item {
        background: white;
        padding: 1rem 1.25rem;
        border-radius: 12px;
        border: 1px solid var(--border-color);
        transition: var(--transition);
    }

        .spec-item:hover {
            transform: translateX(4px);
            box-shadow: var(--shadow-sm);
            border-color: #667eea;
        }

    .spec-label {
        font-size: 0.85rem;
        color: #6b7280;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .spec-value {
        font-size: 1.1rem;
        color: #1a1a1a;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .btn-back {
        padding: 14px 32px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: 2px solid #667eea;
        background: white;
        color: #667eea;
        text-decoration: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-back:hover {
            background: #667eea;
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .modal-img-backdrop {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.92);
        backdrop-filter: blur(4px);
        justify-content: center;
        align-items: center;
        animation: fadeIn 0.3s ease;
    }

        .modal-img-backdrop.active {
            display: flex;
        }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
    }

    to {
        opacity: 1;
    }

    }

    .modal-img-content {
        position: relative;
        background: white;
        border-radius: 24px;
        padding: 2rem;
        max-width: 95vw;
        max-height: 95vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-img-main {
        max-width: 80vw;
        max-height: 70vh;
        object-fit: contain;
        border-radius: 16px;
        margin-bottom: 1.5rem;
    }

    .modal-img-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        transition: var(--transition);
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .modal-img-close:hover {
            background: #dc3545;
            transform: rotate(90deg);
        }

    .modal-img-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        transition: var(--transition);
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .modal-img-arrow:hover {
            background: #667eea;
            transform: translateY(-50%) scale(1.1);
        }

        .modal-img-arrow.left {
            left: 2rem;
        }

        .modal-img-arrow.right {
            right: 2rem;
        }

    .modal-img-thumbs {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 80vw;
        overflow-x: auto;
        padding: 10px;
    }

    .modal-img-thumb {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        flex-shrink: 0;
    }

        .modal-img-thumb:hover {
            border-color: #667eea;
            transform: scale(1.1);
        }

        .modal-img-thumb.selected {
            border-color: #667eea;
            box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.3);
        }

    @@media (max-width: 768px) {
        .product-title

    {
        font-size: 1.8rem;
    }

    .product-price {
        font-size: 2.2rem;
    }

    .product-gallery-section,
    .product-info-section {
        padding: 1.5rem;
    }

    .main-image-container {
        max-width: 100%;
    }

    .spec-grid {
        grid-template-columns: 1fr;
    }

    .modal-img-arrow.left {
        left: 0.5rem;
    }

    .modal-img-arrow.right {
        right: 0.5rem;
    }

    }
</style>

<div class="product-page-wrapper">
    <div class="product-details-container">
        <div class="product-details-card">
            <div class="row g-0">
                <div class="col-lg-6">
                    <div class="product-gallery-section">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="main-image-container">
                                <img id="mainImage"
                                     src="@Model.Images.First().FileUrl"
                                     class="product-main-image"
                                     alt="@Model.Title"
                                     onclick="openImgModal(0)" />
                                <div class="image-badge">
                                    1 / @Model.Images.Count
                                </div>
                            </div>

                            @if (Model.Images.Count > 1)
                            {
                                <div class="thumbnail-gallery">
                                    @for (int i = 0; i < Model.Images.Count; i++)
                                    {
                                        var img = Model.Images[i];
                                        <div class="thumbnail-item @(i == 0 ? "active" : "")"
                                             data-index="@i"
                                             onclick="changeMainImage(@i)">
                                            <img src="@img.FileUrl" alt="@img.FileName" />
                                        </div>
                                    }
                                </div>
                            }
                        }
                        else if (!string.IsNullOrEmpty(Model.ProductImageUrl))
                        {
                            <div class="main-image-container">
                                <img src="@Model.ProductImageUrl" class="product-main-image" alt="@Model.Title" />
                            </div>
                        }
                        else
                        {
                            <div class="main-image-container">
                                <img src="https://ik.imagekit.io/rqxdk712q/products/733b35b7-b949-4a3c-9e64-1de44004c88e_NoImageLogo" class="product-main-image" alt="No image" />
                            </div>
                        }
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="product-info-section">
                        <div class="product-header">
                            <h1 class="product-title">@Model.Title</h1>
                            <span class="product-code">კოდი: @Model.Code</span>

                            @if (!string.IsNullOrWhiteSpace(Model.Description))
                            {
                                <p class="product-description">@Model.Description</p>
                            }
                        </div>

                        <div class="price-availability-row">
                            <div class="product-price">@Model.Price?.ToString("N2") ₾</div>
                            @if (Model.IsAvailable == true)
                            {
                                <span class="availability-badge in-stock">მარაგშია</span>
                            }
                            else
                            {
                                <span class="availability-badge out-of-stock">არ არის მარაგში</span>
                            }
                        </div>

                        <div class="product-specs">
                            <h3 class="specs-title">დეტალური ინფორმაცია</h3>
                            <div class="spec-grid">
                                @if (Model.Category != null)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">კატეგორია</div>
                                        <div class="spec-value">@Model.Category.Name</div>
                                    </div>
                                }
                                @if (Model.Brand != null)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">ბრენდი</div>
                                        <div class="spec-value">@Model.Brand.Name</div>
                                    </div>
                                }
                                @if (Model.ProducerCountry != null)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">წარმოების ქვეყანა</div>
                                        <div class="spec-value">@Model.ProducerCountry.Name</div>
                                    </div>
                                }
                                @if (!string.IsNullOrWhiteSpace(Model.Color))
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">ფერი</div>
                                        <div class="spec-value">@Model.Color</div>
                                    </div>
                                }
                                @if (Model.Length.HasValue)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">სიგრძე</div>
                                        <div class="spec-value">@Model.Length</div>
                                    </div>
                                }
                                @if (Model.Width.HasValue)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">სიგანე</div>
                                        <div class="spec-value">@Model.Width</div>
                                    </div>
                                }
                                @if (Model.Height.HasValue)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">სიმაღლე</div>
                                        <div class="spec-value">@Model.Height</div>
                                    </div>
                                }
                                @if (Model.CreateDate.HasValue)
                                {
                                    <div class="spec-item">
                                        <div class="spec-label">დამატების თარიღი</div>
                                        <div class="spec-value">@Model.CreateDate.Value.ToString("yyyy-MM-dd")</div>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="action-buttons">
                            <a href="@Url.Action("Index", "Home")" class="btn-back">
                                <span>←</span> უკან დაბრუნება
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Images != null && Model.Images.Any())
{
    <div id="imgModalBackdrop" class="modal-img-backdrop" onclick="closeImgModal(event)">
        <div class="modal-img-content" onclick="event.stopPropagation()">
            <button class="modal-img-close" onclick="closeImgModal(event)">&times;</button>
            <button class="modal-img-arrow left" onclick="imgModalPrev(event)">‹</button>
            <img id="imgModalMain" class="modal-img-main" src="" alt="Product image" />
            <button class="modal-img-arrow right" onclick="imgModalNext(event)">›</button>
            <div class="modal-img-thumbs" id="imgModalThumbs"></div>
        </div>
    </div>
}

@section Scripts {
    <script>
        @if (Model.Images != null && Model.Images.Any())
        {
                @:var imgModalImages = [
                foreach (var img in Model.Images)
                {
                        @:{ url: '@img.FileUrl', alt: '@img.FileName' },
                }
                    @:];
                @:var imgModalIndex = 0;
        }

        function changeMainImage(index) {
            const mainImg = document.getElementById('mainImage');
            const thumbnails = document.querySelectorAll('.thumbnail-item');
            const badge = document.querySelector('.image-badge');

            if (mainImg && imgModalImages && imgModalImages[index]) {
                mainImg.src = imgModalImages[index].url;

                thumbnails.forEach((thumb, i) => {
                    thumb.classList.toggle('active', i === index);
                });

                if (badge) {
                    badge.textContent = (index + 1) + ' / ' + imgModalImages.length;
                }
            }
        }

        function openImgModal(idx) {
            imgModalIndex = idx;
            showImgModal();
            document.getElementById('imgModalBackdrop').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeImgModal(e) {
            if (e) e.preventDefault();
            document.getElementById('imgModalBackdrop').classList.remove('active');
            document.body.style.overflow = '';
        }

        function showImgModal() {
            const mainImg = document.getElementById('imgModalMain');
            const thumbs = document.getElementById('imgModalThumbs');

            if (!mainImg || !thumbs || !imgModalImages) return;

            mainImg.src = imgModalImages[imgModalIndex].url;
            mainImg.alt = imgModalImages[imgModalIndex].alt;

            thumbs.innerHTML = '';
            imgModalImages.forEach((img, i) => {
                const thumb = document.createElement('img');
                thumb.src = img.url;
                thumb.alt = img.alt;
                thumb.className = 'modal-img-thumb' + (i === imgModalIndex ? ' selected' : '');
                thumb.onclick = () => { imgModalIndex = i; showImgModal(); };
                thumbs.appendChild(thumb);
            });
        }

        function imgModalPrev(e) {
            if (e) e.stopPropagation();
            if (!imgModalImages) return;
            imgModalIndex = (imgModalIndex - 1 + imgModalImages.length) % imgModalImages.length;
            showImgModal();
        }

        function imgModalNext(e) {
            if (e) e.stopPropagation();
            if (!imgModalImages) return;
            imgModalIndex = (imgModalIndex + 1) % imgModalImages.length;
            showImgModal();
        }

        document.addEventListener('keydown', (e) => {
            const modal = document.getElementById('imgModalBackdrop');
            if (!modal || !modal.classList.contains('active')) return;

            if (e.key === 'Escape') closeImgModal(e);
            if (e.key === 'ArrowLeft') imgModalPrev(e);
            if (e.key === 'ArrowRight') imgModalNext(e);
        });
    </script>
}