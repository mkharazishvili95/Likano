@model Likano.Infrastructure.Queries.Product.Models.Details.GetProductDetailsResponse

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title ?? "პროდუქტის დეტალები";
    var imageSize = "300px";
}

<style>
    .product-details-image,
    .product-details-carousel img {
        width: @imageSize;
        height: @imageSize;
        object-fit: cover;
        border-radius: 8px;
        background: #f8f9fa;
        box-shadow: 0 1px 4px rgba(0,0,0,0.04);
        cursor: pointer;
        transition: transform 0.15s;
    }
    .product-details-image:hover {
        transform: scale(1.04);
        box-shadow: 0 4px 16px rgba(0,0,0,0.10);
    }
    .product-details-gallery {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        justify-content: center;
        align-items: center;
        margin-bottom: 1rem;
    }
    .modal-img-backdrop {
        display: none;
        position: fixed;
        z-index: 1050;
        left: 0; top: 0; width: 100vw; height: 100vh;
        background: rgba(0,0,0,0.7);
        justify-content: center;
        align-items: center;
    }
    .modal-img-backdrop.active {
        display: flex;
    }
    .modal-img-content {
        position: relative;
        background: #fff;
        border-radius: 10px;
        padding: 24px 24px 16px 24px;
        max-width: 90vw;
        max-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .modal-img-main {
        max-width: 60vw;
        max-height: 60vh;
        object-fit: contain;
        border-radius: 8px;
        margin-bottom: 16px;
        box-shadow: 0 2px 12px rgba(0,0,0,0.15);
    }
    .modal-img-thumbs {
        display: flex;
        gap: 8px;
        margin-bottom: 8px;
        flex-wrap: wrap;
        justify-content: center;
    }
    .modal-img-thumb {
        width: 60px;
        height: 60px;
        object-fit: cover;
        border-radius: 5px;
        border: 2px solid transparent;
        cursor: pointer;
        transition: border 0.2s;
    }
    .modal-img-thumb.selected {
        border: 2px solid #0d6efd;
    }
    .modal-img-close {
        position: absolute;
        top: 8px;
        right: 12px;
        font-size: 2rem;
        color: #333;
        background: none;
        border: none;
        cursor: pointer;
        z-index: 2;
        opacity: 0.8;
        transition: opacity 0.2s;
    }
    .modal-img-close:hover {
        opacity: 1;
        color: #dc3545;
    }
    .modal-img-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0,0,0,0.2);
        border: none;
        color: #fff;
        font-size: 2rem;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        cursor: pointer;
        z-index: 2;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .modal-img-arrow.left { left: 0; }
    .modal-img-arrow.right { right: 0; }
</style>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="product-details-card">
                <div class="row">
                    <div class="col-md-5 d-flex flex-column align-items-center">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="product-details-gallery">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    var img = Model.Images[i];
                                    <img src="@img.FileUrl"
                                         class="product-details-image"
                                         alt="@img.FileName"
                                         data-img-index="@i"
                                         onclick="openImgModal(@i)" />
                                }
                            </div>
                        }
                        else if (!string.IsNullOrEmpty(Model.ProductImageUrl))
                        {
                            <img src="@Model.ProductImageUrl" class="product-details-image mb-3" alt="@Model.Title" />
                        }
                        else
                        {
                            <img src="~/images/no-image.png" class="product-details-image mb-3" alt="No image" />
                        }
                    </div>
                    <div class="col-md-7">
                        <div class="product-details-title">@Model.Title</div>
                        <p class="text-muted">@Model.Description</p>
                        <div class="product-details-price">@Model.Price?.ToString("N2") ₾</div>
                        <p>
                            <strong>კოდი:</strong> @Model.Code
                        </p>
                        <p>
                            <strong>მდგომარეობა:</strong>
                            @if (Model.IsAvailable == true)
                            {
                                <span class="badge bg-success">მარაგშია</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">არ არის მარაგში</span>
                            }
                        </p>
                        <ul class="list-group list-group-flush product-details-list mb-3">
                            <li class="list-group-item"><strong>კატეგორია:</strong> @Model.Category?.Name</li>
                            <li class="list-group-item"><strong>ბრენდი:</strong> @Model.Brand?.Name</li>
                            <li class="list-group-item"><strong>წარმოების ქვეყანა:</strong> @Model.ProducerCountry?.Name</li>
                            <li class="list-group-item"><strong>ფერი:</strong> @Model.Color</li>
                            <li class="list-group-item"><strong>სიგრძე:</strong> @Model.Length</li>
                            <li class="list-group-item"><strong>სიგანე:</strong> @Model.Width</li>
                            <li class="list-group-item"><strong>სიმაღლე:</strong> @Model.Height</li>
                            <li class="list-group-item"><strong>დამატების თარიღი:</strong> @Model.CreateDate?.ToString("yyyy-MM-dd")</li>
                        </ul>
                        <div class="product-details-back">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">უკან დაბრუნება</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Images != null && Model.Images.Any())
{
    <div id="imgModalBackdrop" class="modal-img-backdrop" tabindex="-1" onclick="closeImgModal(event)">
        <div class="modal-img-content" onclick="event.stopPropagation()">
            <button class="modal-img-close" onclick="closeImgModal(event)" title="დახურვა">&times;</button>
            <button class="modal-img-arrow left" onclick="imgModalPrev(event)" title="წინა">&#8592;</button>
            <img id="imgModalMain" class="modal-img-main" src="" alt="Product image" />
            <button class="modal-img-arrow right" onclick="imgModalNext(event)" title="შემდეგი">&#8594;</button>
            <div class="modal-img-thumbs" id="imgModalThumbs"></div>
        </div>
    </div>
}

@section Scripts {
    <script>
        var imgModalImages = [
            @foreach (var img in Model.Images)
            {
                @: { url: '@img.FileUrl', alt: '@img.FileName' },
            }
        ];
        var imgModalIndex = 0;

        function openImgModal(idx) {
            imgModalIndex = idx;
            showImgModal();
            document.getElementById('imgModalBackdrop').classList.add('active');
        }

        function closeImgModal(e) {
            if (e) e.preventDefault();
            document.getElementById('imgModalBackdrop').classList.remove('active');
        }

        function showImgModal() {
            var mainImg = document.getElementById('imgModalMain');
            var thumbs = document.getElementById('imgModalThumbs');
            if (!mainImg || !thumbs) return;
            mainImg.src = imgModalImages[imgModalIndex].url;
            mainImg.alt = imgModalImages[imgModalIndex].alt;

            thumbs.innerHTML = '';
            imgModalImages.forEach(function(img, i) {
                var thumb = document.createElement('img');
                thumb.src = img.url;
                thumb.alt = img.alt;
                thumb.className = 'modal-img-thumb' + (i === imgModalIndex ? ' selected' : '');
                thumb.onclick = function() { imgModalIndex = i; showImgModal(); };
                thumbs.appendChild(thumb);
            });
        }

        function imgModalPrev(e) {
            if (e) e.stopPropagation();
            imgModalIndex = (imgModalIndex - 1 + imgModalImages.length) % imgModalImages.length;
            showImgModal();
        }

        function imgModalNext(e) {
            if (e) e.stopPropagation();
            imgModalIndex = (imgModalIndex + 1) % imgModalImages.length;
            showImgModal();
        }

        document.addEventListener('keydown', function(e) {
            var modal = document.getElementById('imgModalBackdrop');
            if (!modal || !modal.classList.contains('active')) return;
            if (e.key === 'Escape') closeImgModal(e);
            if (e.key === 'ArrowLeft') imgModalPrev(e);
            if (e.key === 'ArrowRight') imgModalNext(e);
        });
    </script>
}