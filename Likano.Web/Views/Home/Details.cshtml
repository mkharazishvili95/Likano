@using Likano.Infrastructure.Queries.Product.Models.Similar
@model Likano.Infrastructure.Queries.Product.Models.Details.GetProductDetailsResponse

@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title ?? "პროდუქტის დეტალები";
}

<style>
    :root {
        --primary: #6366f1;
        --primary-dark: #4f46e5;
        --primary-light: #818cf8;
        --secondary: #ec4899;
        --success: #10b981;
        --danger: #ef4444;
        --surface: #ffffff;
        --surface-alt: #f8fafc;
        --border: #e2e8f0;
        --text-primary: #0f172a;
        --text-secondary: #64748b;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 12px rgba(0,0,0,0.08);
        --shadow-lg: 0 20px 40px rgba(0,0,0,0.12);
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .product-page-wrapper {
        min-height: 80vh;
        background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
        padding: 2.5rem 0 4rem 0;
    }

    .product-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .product-meta-bar {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 16px;
        padding: 1rem 1.5rem;
        margin-bottom: 2rem;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--border);
        display: flex;
        gap: 2rem;
        align-items: center;
        justify-content: flex-end;
        flex-wrap: wrap;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--text-secondary);
        font-size: 0.95rem;
        font-weight: 500;
    }

        .meta-item svg {
            width: 18px;
            height: 18px;
            fill: var(--primary);
            opacity: 0.8;
        }

    .meta-sep {
        color: var(--border);
        font-weight: 300;
    }

    .product-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        align-items: start;
    }

    .gallery-card {
        background: var(--surface);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border);
        position: sticky;
        top: 20px;
    }

    .product-title {
        font-size: 2rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 1rem;
        line-height: 1.3;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .product-code {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: linear-gradient(135deg, #ede9fe 0%, #fce7f3 100%);
        color: var(--primary-dark);
        padding: 0.5rem 1.25rem;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        margin-bottom: 2rem;
    }

    .main-image-wrapper {
        width: 100%;
        aspect-ratio: 1;
        border-radius: 20px;
        overflow: hidden;
        background: var(--surface-alt);
        position: relative;
        margin-bottom: 1.5rem;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--border);
    }

    .main-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        cursor: zoom-in;
        transition: var(--transition);
    }

        .main-image:hover {
            transform: scale(1.05);
        }

    .thumbnail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
        gap: 0.75rem;
    }

    .thumbnail {
        aspect-ratio: 1;
        border-radius: 12px;
        overflow: hidden;
        cursor: pointer;
        border: 3px solid transparent;
        transition: var(--transition);
        box-shadow: var(--shadow-sm);
        background: var(--surface-alt);
    }

        .thumbnail:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-light);
        }

        .thumbnail.active {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102,241, 0.15);
        }

        .thumbnail img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .info-card {
        background: var(--surface);
        border-radius: 24px;
        padding: 2.5rem;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border);
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .price-availability {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1.5rem;
        padding-bottom: 2rem;
        border-bottom: 2px solid var(--border);
        flex-wrap: wrap;
    }

    .product-price {
        font-size: 1.7rem;
        font-weight: 900;
        background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.02em;
    }

    .availability-badge {
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.95rem;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        box-shadow: var(--shadow-sm);
    }

        .availability-badge.in-stock {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        .availability-badge.out-of-stock {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }

        .availability-badge::before {
            content: '';
            width: 8px;
            height: 8px;
            border-radius: 50%;
            background: currentColor;
            animation: pulse 2s ease-in-out infinite;
        }

    @@keyframes pulse {
        0%, 100%

    {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }

    }

    .specs-section {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .section-title::before {
        content: '';
        display: none;
    }
    .section-title .icon {
        display: inline-flex;
        align-items: center;
        margin-right: 0.5rem;
    }

        .section-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(180deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: 4px;
        }

    .specs-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
    }

    .spec-item {
        background: var(--surface-alt);
        padding: 1.25rem;
        border-radius: 12px;
        border: 1px solid var(--border);
        transition: var(--transition);
    }

        .spec-item:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            border-color: var(--primary-light);
            background: var(--surface);
        }

    .spec-label {
        font-size: 0.75rem;
        color: var(--text-secondary);
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .spec-value {
        font-size: 1.05rem;
        color: var(--text-primary);
        font-weight: 600;
    }

    .actions-section {
        padding-top: 2rem;
        border-top: 2px solid var(--border);
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1rem;
        border: 2px solid var(--primary);
        background: var(--surface);
        color: var(--primary);
        text-decoration: none;
        transition: var(--transition);
        box-shadow: var(--shadow-sm);
    }

        .btn-back:hover {
            background: var(--primary);
            color: white;
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

    .modal-backdrop {
        display: none;
        position: fixed;
        z-index: 9999;
        inset: 0;
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(8px);
        justify-content: center;
        align-items: center;
        animation: fadeIn 0.3s ease;
    }

        .modal-backdrop.active {
            display: flex;
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    .modal-content {
        position: relative;
        background: transparent;
        border-radius: 24px;
        padding: 2rem;
        max-width: 90vw;
        max-height: 90vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
    }

    .modal-main-image {
        width: 600px;
        height: 600px;
        object-fit: contain;
        border-radius: 16px;
        margin-bottom: 1.5rem;
        background: var(--surface-alt);
    }

    .modal-close {
        position: absolute;
        top: 1rem;
        right: 1rem;
        width: 44px;
        height: 44px;
        border-radius: 50%;
        background: rgba(15, 23, 42, 0.8);
        color: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        transition: var(--transition);
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .modal-close:hover {
            background: var(--danger);
            transform: rotate(90deg);
        }

    .modal-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: rgba(15, 23, 42, 0.8);
        color: white;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        transition: var(--transition);
        z-index: 10;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .modal-arrow:hover {
            background: var(--primary);
            transform: translateY(-50%) scale(1.1);
        }

        .modal-arrow.left {
            left: 2rem;
        }

        .modal-arrow.right {
            right: 2rem;
        }

    .modal-thumbnails {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        justify-content: center;
        max-width: 80vw;
        overflow-x: auto;
        padding: 10px;
    }

    .modal-thumbnail {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
        border: 3px solid transparent;
        cursor: pointer;
        transition: var(--transition);
        flex-shrink: 0;
    }

        .modal-thumbnail:hover {
            border-color: var(--primary);
            transform: scale(1.1);
        }

        .modal-thumbnail.selected {
            border-color: var(--primary);
            box-shadow: 0 0 0 4px rgba(99, 102,241, 0.3);
        }

    @@media (max-width: 992px) {
        .product-grid {
            grid-template-columns: 1fr;
        }

        .gallery-card {
            position: static;
        }

        .specs-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 768px) {
        .product-page-wrapper {
            padding: 1.5rem 0 3rem 0;
        }

        .product-container {
            padding: 0 1rem;
        }

        .product-meta-bar {
            justify-content: center;
            gap: 1rem;
        }

        .gallery-card,
        .info-card {
            padding: 1.5rem;
        }

        .product-title {
            font-size: 1.5rem;
        }

        .product-price {
            font-size: 1.1rem;
        }

        .price-availability {
            flex-direction: column;
            align-items: flex-start;
        }

        .modal-main-image {
            width: 90vw;
            height: 90vw;
            max-width: 500px;
            max-height: 500px;
        }

        .modal-arrow.left {
            left: 0.5rem;
        }

        .modal-arrow.right {
            right: 0.5rem;
        }
    }
    .main-image-wrapper {
        position: relative;
    }
    .main-image-tooltip {
        display: none;
        position: absolute;
        left: 50%;
        bottom: 12px;
        transform: translateX(-50%);
        background: rgba(99,102,241,0.95);
        color: #fff;
        padding: 6px 16px;
        border-radius: 8px;
        font-size: 0.95rem;
        font-weight: 500;
        white-space: nowrap;
        box-shadow: var(--shadow-md);
        pointer-events: none;
        z-index: 10;
        transition: opacity 0.2s;
        opacity: 0;
    }
    .main-image-wrapper:hover .main-image-tooltip,
    .main-image:focus + .main-image-tooltip {
        display: block;
        opacity: 1;
    }

    #similarProductsCarousel .carousel-item {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 2rem 0;
    }

    similar-products-section {
        margin: 4rem 0 2rem;
        padding: 2.5rem 0;
        background: var(--surface);
        border-radius: 24px;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--border);
    }

    .similar-products-title {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--text-primary);
        margin-bottom: 2rem;
        text-align: center;
        background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .similar-products-carousel {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        padding: 1rem 0;
        transition: transform 0.6s ease;
        will-change: transform;
    }

    .similar-products-carousel-outer {
        overflow: hidden;
        padding: 0 1rem;
    }

    .similar-product-card {
        flex: 0 0 260px;
        background: var(--surface-alt);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: var(--shadow-md);
        transition: var(--transition);
        border: 1px solid var(--border);
        text-align: center;
        padding: 1.25rem 1rem;
        animation: floatCard 3s ease-in-out infinite;
    }

        .similar-product-card:hover {
            animation: none;
            transform: translateY(-12px);
            box-shadow: var(--shadow-lg);
            border-color: var(--primary-light);
        }

        .similar-product-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 1rem;
            background: white;
        }

        .similar-product-card h5 {
            font-size: 1.1rem;
            font-weight: 700;
            margin: 0.75rem 0 0.5rem;
            color: var(--text-primary);
            line-height: 1.4;
            min-height: 2.8em;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .similar-product-card p {
            font-size: 1.25rem;
            font-weight: 800;
            margin: 0.5rem 0 1rem;
        }

        .similar-product-card .btn {
            width: 100%;
            padding: 0.75rem;
            font-weight: 600;
            border-radius: 12px;
            transition: var(--transition);
        }

            .similar-product-card .btn:hover {
                transform: scale(1.04);
                box-shadow: 0 8px 24px rgba(99, 102, 241, 0.25);
            }

    @@keyframes floatCard {
        0% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0); }
    }

    .similar-products-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 2rem;
        padding: 1rem 0;
    }
</style>

<div class="product-page-wrapper">
    <div class="product-container">

        <div class="product-meta-bar">
            @if (Model.Id.HasValue)
            {
                <div class="meta-item">
                    <svg viewBox="0 0 20 20"><path d="M2 10a2 2 0 012-2h2V6a2 2 0 012-2h4a2 2 0 012 2v2h2a2 2 0 012 2v4a2 2 0 01-2 2h-2v2a2 2 0 01-2 2h-4a2 2 0 01-2-2v-2H4a2 2 0 01-2-2v-4zm4-4v2h8V6a1 1 0 00-1-1h-6a1 1 0 00-1 1zm10 4h-2v4h2v-4zm-4 6v-2H8v2h4zm-6-6H4v4h2v-4z" /></svg>
                    ID - @Model.Id.Value.ToString("N0")
                </div>
                <span class="meta-sep">|</span>
            }
            @if (Model.ViewCount.HasValue)
            {
                <div class="meta-item">
                    <svg viewBox="0 0 20 20"><path d="M10 3c-5 0-9 5.25-9 7s4 7 9 7 9-5.25 9-7-4-7-9-7zm0 12c-3.87 0-7-3.13-7-5s3.13-5 7-5 7 3.13 7 5-3.13 5-7 5zm0-8a3 3 0 100 6 3 3 0 000-6zm0 4.5A1.5 1.5 0 1110 7a1.5 1.5 0 010 3z" /></svg>
                    @Model.ViewCount.Value.ToString("N0")
                </div>
                <span class="meta-sep">|</span>
            }
            @if (Model.CreateDate.HasValue)
            {
                <div class="meta-item">
                    <svg viewBox="0 0 20 20"><path d="M6 2a1 1 0 012 0v1h4V2a1 1 0 112 0v1a3 3 0 013 3v10a3 3 0 01-3 3H6a3 3 0 01-3-3V6a3 3 0 013-3V2zm8 4H6a1 1 0 00-1 1v10a1 1 0 001 1h8a1 1 0 001-1V7a1 1 0 00-1-1zm-4 2a1 1 0 110 2 1 1 0 010-2z" /></svg>
                    @Model.CreateDate.Value.ToString("dd MMM yy, HH:mm", new System.Globalization.CultureInfo("ka-GE"))
                </div>
            }
        </div>

        <div class="product-grid">

            <div class="gallery-card">
                <h1 class="product-title">@Model.Title</h1>
                <span class="product-code">📦 კოდი: @Model.Code</span>

                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="main-image-wrapper">
                        <img id="mainImage"
                             src="@Model.Images.First().FileUrl"
                             class="main-image"
                             alt="@Model.Title"
                             tabindex="0"
                             onclick="openModal(selectedIndex)"
                             onmouseover="showTooltip()"
                             onmouseout="hideTooltip()" />
                        <div class="main-image-tooltip" id="mainImageTooltip">დააკლიკეთ გასადიდებლად 🔍</div>
                    </div>

                    @if (Model.Images.Count > 1)
                    {
                        <div class="thumbnail-grid">
                            @for (int i = 0; i < Model.Images.Count; i++)
                            {
                                var img = Model.Images[i];
                                <div class="thumbnail @(i == 0 ? "active" : "")"
                                     data-index="@i"
                                     onclick="changeImage(@i)">
                                    <img src="@img.FileUrl" alt="@img.FileName" />
                                </div>
                            }
                        </div>
                    }
                }
                else if (!string.IsNullOrEmpty(Model.ProductImageUrl))
                {
                    <div class="main-image-wrapper">
                        <img src="@Model.ProductImageUrl" class="main-image" alt="@Model.Title" />
                    </div>
                }
                else
                {
                    <div class="main-image-wrapper">
                        <img src="https://ik.imagekit.io/rqxdk712q/products/733b35b7-b949-4a3c-9e64-1de44004c88e_NoImageLogo" class="main-image" alt="No image" />
                    </div>
                }
            </div>

            <div class="info-card">

                <div class="price-availability">
                    @if (Model.Price.HasValue && Model.Price > 0)
                    {
                        <div class="product-price">@Model.Price.Value.ToString("N2") ₾</div>
                    }
                    @if (Model.IsAvailable == true)
                    {
                        <span class="availability-badge in-stock">მარაგშია</span>
                    }
                    else
                    {
                        <span class="availability-badge out-of-stock">არ არის მარაგში</span>
                    }
                </div>

                <div class="specs-section">
                    <h3 class="section-title">
                        <span class="icon">

                            <svg width="22" height="22" viewBox="0 0 24 24" fill="none">
                                <path d="M7 20v-9M7 9V4M7 9h10M17 9v11M17 9V4M17 9H7" stroke="#6366f1" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                            </svg>
                        </span>
                        ტექნიკური მახასიათებლები
                    </h3>
                    <div class="specs-grid">
                        @if (Model.Category != null)
                        {
                            <div class="spec-item">
                                <div class="spec-label">კატეგორია</div>
                                <div class="spec-value">@Model.Category.Name</div>
                            </div>
                        }
                        @if (Model.Brand != null)
                        {
                            <div class="spec-item">
                                <div class="spec-label">ბრენდი</div>
                                <div class="spec-value">@Model.Brand.Name</div>
                            </div>
                        }
                        @if (!string.IsNullOrWhiteSpace(Model.Color))
                        {
                            <div class="spec-item">
                                <div class="spec-label">ფერი</div>
                                <div class="spec-value">@Model.Color</div>
                            </div>
                        }
                        @if (Model.Length.HasValue)
                        {
                            <div class="spec-item">
                                <div class="spec-label">სიგრძე</div>
                                <div class="spec-value">@Model.Length მ</div>
                            </div>
                        }
                        @if (Model.Width.HasValue)
                        {
                            <div class="spec-item">
                                <div class="spec-label">სიგანე</div>
                                <div class="spec-value">@Model.Width მ</div>
                            </div>
                        }
                        @if (Model.Height.HasValue)
                        {
                            <div class="spec-item">
                                <div class="spec-label">სიმაღლე</div>
                                <div class="spec-value">@Model.Height მ</div>
                            </div>
                        }
                        @if (Model.ProducerCountry != null)
                        {
                            <div class="spec-item">
                                <div class="spec-label">წარმოების ქვეყანა</div>
                                <div class="spec-value">@Model.ProducerCountry.Name</div>
                            </div>
                        }
                    </div>
                </div>

                <div class="actions-section">
                    <a href="@Url.Action("Index", "Home")" class="btn-back">
                        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
